<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/headSpace"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <RelativeLayout
                android:id="@+id/group_avatar_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t270dp"
                android:layout_below="@+id/headSpace">
                <RelativeLayout
                    android:id="@+id/UserProfileCoverArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner_default"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"/>
                    <ImageView
                        android:background="@drawable/btn_group_cam"
                        android:layout_width="37dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:contentDescription="[AID]Profile_Background"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/UserProfileDisplayNameArea"
                android:layout_alignBottom="@+id/UserProfileDisplayNameArea"/>
            <RelativeLayout
                android:id="@+id/UserProfileDisplayNameArea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t50dp"
                android:layout_below="@+id/group_avatar_container">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/SpaceArea1"
                        android:layout_width="@dimen/t145dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@+id/SpaceArea1">
                        <TextView
                            android:textSize="25sp"
                            android:textColor="@color/you_color_normal"
                            android:gravity="center_vertical"
                            android:id="@+id/EditGotoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="9dp"
                            android:text="TEST"
                            android:singleLine="true"
                            android:includeFontPadding="false"
                            android:layout_toLeftOf="@+id/editNameImg"
                            android:layout_alignParentLeft="true"/>
                        <ImageView
                            android:id="@+id/editNameImg"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/btn_edit"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="[AID]Profile_EditName"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/horizontalLine1"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/UserProfileDisplayNameArea"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/UserProfileCompanyArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalLine1">
                <RelativeLayout
                    android:background="@color/you_color_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t55dp">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:gravity="bottom|left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/profile_company_organization"/>
                </RelativeLayout>
                <EditText
                    android:textSize="18sp"
                    android:textColorHint="@color/you_color_hint"
                    android:gravity="center_vertical"
                    android:id="@+id/CompanyEditText"
                    android:background="#00000000"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/profile_page_content_item_title_margin_left"
                    android:minHeight="@dimen/t60dp"
                    android:maxLength="40"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/UserProfileTitleArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UserProfileCompanyArea">
                <RelativeLayout
                    android:background="@color/you_color_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t55dp">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:gravity="bottom|left"
                        android:background="@color/you_color_light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/t55dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/clw_registration_info_job_title"/>
                </RelativeLayout>
                <EditText
                    android:textSize="18sp"
                    android:textColorHint="@color/you_color_hint"
                    android:gravity="center_vertical"
                    android:id="@+id/TitleEditText"
                    android:background="#00000000"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/profile_page_content_item_title_margin_left"
                    android:minHeight="@dimen/t60dp"
                    android:maxLength="40"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/UserProfileWhatUpTitle"
                android:background="@color/you_color_light_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t55dp"
                android:layout_below="@+id/UserProfileTitleArea">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:gravity="bottom|left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/profile_status_message_title"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/UserProfileWhatUpInfoArea"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t60dp"
                android:layout_below="@+id/UserProfileWhatUpTitle">
                <include
                    android:contentDescription="[AID]Profile_WhatsUp"
                    layout="@layout/setting_whatsup_item_with_goto"/>
            </RelativeLayout>
            <View
                android:id="@+id/horizontalLine2"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/UserProfileWhatUpInfoArea"/>
            <RelativeLayout
                android:id="@+id/UserAccountArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalLine2">
                <RelativeLayout
                    android:id="@+id/UserAccountTitle"
                    android:background="@color/you_color_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t55dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <View
                    android:id="@+id/horizontalLine3"
                    android:background="#dddddd"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/UserAccountTitle"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalLine3">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/UserEmailArea"
                        android:paddingLeft="0dp"
                        android:paddingRight="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:contentDescription="[AID]Profile_UserEmail">
                        <include layout="@layout/setting_item_with_goto"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/horizontalLine5"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/UserAccountArea"/>
            <RelativeLayout
                android:id="@+id/UserProfileInfoArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalLine5">
                <RelativeLayout
                    android:id="@+id/UserProfileInfoTitle"
                    android:background="@color/you_color_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t55dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <View
                    android:id="@+id/horizontalLine6"
                    android:background="#dddddd"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/UserProfileInfoTitle"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalLine6">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/UserProfilePublicId"
                        android:paddingLeft="0dp"
                        android:paddingRight="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:contentDescription="[AID]Profile_UserID">
                        <include layout="@layout/setting_item_with_goto"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/horizontalLine7"
                        android:background="#dddddd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/UserProfileSharePublicIdArea"
                        android:paddingLeft="0dp"
                        android:paddingRight="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:contentDescription="[AID]Profile_PublishID">
                        <include layout="@layout/setting_item_with_check_box"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/horizontalLine8"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/UserProfileInfoArea"/>
            <RelativeLayout
                android:id="@+id/UserProfileQRCodeArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalLine8">
                <RelativeLayout
                    android:id="@+id/UserProfileQRCodeTitle"
                    android:background="@color/you_color_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t55dp">
                    <TextView
                        android:textSize="@dimen/t18dp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:gravity="bottom|left"
                        android:id="@+id/SharePublicIdNote"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/profile_share_public_id_note"/>
                </RelativeLayout>
                <View
                    android:id="@+id/horizontalLine9"
                    android:background="#dddddd"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/UserProfileQRCodeTitle"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalLine9">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/UserProfileQrCodeArea"
                        android:paddingLeft="0dp"
                        android:paddingRight="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:contentDescription="[AID]Profile_MyQRCode">
                        <include layout="@layout/setting_item_with_goto"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/horizontalLine10"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/UserProfileQRCodeArea"/>
            <RelativeLayout
                android:id="@+id/SignOutArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalLine10">
                <RelativeLayout
                    android:id="@+id/SignOutTitle"
                    android:background="@color/you_color_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/t55dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <View
                    android:id="@+id/horizontalLine11"
                    android:background="#dddddd"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/SignOutTitle"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalLine11">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/SignOut"
                        android:paddingLeft="0dp"
                        android:paddingRight="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:contentDescription="[AID]Profile_SignOut">
                        <include layout="@layout/setting_item_with_goto"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bottomSpace"
                android:background="@color/you_color_light_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t10dp"
                android:layout_below="@+id/SignOutArea">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/avatarSpace"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t190dp"
                android:layout_below="@+id/headSpace">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/t150dp"
                android:layout_below="@+id/avatarSpace">
                <RelativeLayout
                    android:id="@+id/UserProfileAvatarArea"
                    android:layout_width="@dimen/t150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="17dp">
                    <ImageView
                        android:id="@+id/UserProfileAvatarData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/AvatarImageView"/>
                    <ImageView
                        android:background="@drawable/btn_group_cam"
                        android:layout_width="37dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="[AID]Profile_Edit"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/UserProfileHeader"
        android:background="@color/you_color_alpha_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t43dp">
        <ImageView
            android:id="@+id/UserProfileBackBtn"
            android:contentDescription="[AID]Profile_Back"
            style="@style/TitleBar_BackButton3"/>
        <TextView
            android:textSize="@dimen/t25dp"
            android:textColor="@color/white"
            android:id="@+id/UserProfileTopBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_title"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
