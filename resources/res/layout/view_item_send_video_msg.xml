<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ViewItemSendLayout">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <LinearLayout
            android:id="@+id/ChatMessageContentLayout"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ChatMessageContentPhotoView"
                    android:background="@drawable/bg_chat_photo_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    style="@style/ViewItemSendPhoto"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/video_btn_play_n"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:layout_alignTop="@+id/ChatMessageContentPhotoView"
                    android:layout_alignRight="@+id/ChatMessageContentPhotoView"/>
                <RelativeLayout
                    android:id="@+id/ChatPhotoCommentCntView"
                    android:visibility="invisible"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_alignTop="@+id/ChatMessageContentPhotoView"
                    android:layout_alignRight="@+id/ChatMessageContentPhotoView">
                    <ImageView
                        android:id="@+id/commentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mark_blue"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/you_color_normal"
                        android:id="@+id/commentStringText"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/scheduleSendMask"
                    android:background="@color/you_color_50_percentage_white"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ChatMessageContentPhotoView"
                    android:layout_alignTop="@+id/ChatMessageContentPhotoView"
                    android:layout_alignRight="@+id/ChatMessageContentPhotoView"
                    android:layout_alignBottom="@+id/ChatMessageContentPhotoView"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/explode"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChatMessageContentLayout"
            android:layout_alignBottom="@+id/ChatMessageContentLayout">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_gravity="bottom"
                    android:id="@+id/ChatMessageSendFail"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_send_failed"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/ChatMessageReadCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    style="@style/ViewItemSendRead"/>
                <ProgressBar
                    android:id="@+id/sendingProgressbar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/ChatMessageTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    style="@style/ViewItemSendTime"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/send_photo_progress"
                android:layout_alignParentBottom="true"
                style="?android:attr/progressBarStyleHorizontal"/>
        </RelativeLayout>
        <TextView
            android:textSize="11sp"
            android:textColor="#ff0000"
            android:id="@+id/ttl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="11dp"
            android:includeFontPadding="false"
            android:layout_below="@+id/ChatMessageContentLayout"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
