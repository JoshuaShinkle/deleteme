<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/contentLayout"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/headSpace"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t270dp"
                android:src="@drawable/banner_default"
                android:scaleType="centerCrop"
                android:layout_below="@+id/headSpace"/>
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/t124dp"
                android:layout_height="@dimen/t124dp"
                android:layout_marginLeft="@dimen/t17dp"
                android:layout_marginTop="@dimen/t204dp"
                style="@style/AvatarImageView"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/userInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t160dp"
                android:minHeight="@dimen/t70dp"
                android:layout_below="@+id/cover">
                <RelativeLayout style="@style/UserInfoRow">
                    <com.rockerhieu.emojicon.EmojiconTextView
                        android:textSize="@dimen/t25dp"
                        android:textColor="@color/you_color_normal"
                        android:ellipsize="end"
                        android:id="@+id/nickname"
                        android:paddingRight="@dimen/t33dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:includeFontPadding="false"
                        emojicon:emojiconSize="@dimen/t25dp"/>
                    <ImageView
                        android:id="@+id/editName"
                        android:padding="@dimen/t3dp"
                        android:layout_width="@dimen/t30dp"
                        android:layout_height="@dimen/t30dp"
                        android:src="@drawable/btn_edit"
                        android:layout_alignRight="@+id/nickname"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/t15dp"
                    android:textColor="@color/you_color_normal"
                    android:id="@+id/displayname"
                    style="@style/UserInfoRow"/>
                <TextView
                    android:id="@+id/publicId"
                    style="@style/UserInfoRow.NormalText"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/t16sp"
                android:textColor="@color/black"
                android:id="@+id/emailTextView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t25dp"
                android:layout_marginRight="@dimen/t25dp"
                android:layout_below="@+id/userInfoLayout"/>
            <TextView
                android:textSize="@dimen/t16sp"
                android:textColor="@color/black"
                android:id="@+id/organizationTextView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t25dp"
                android:layout_marginTop="@dimen/t5dp"
                android:layout_marginRight="@dimen/t25dp"
                android:layout_below="@+id/emailTextView"/>
            <RelativeLayout
                android:id="@+id/messageLayout"
                android:background="@drawable/bg_border_profile_status_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t20dp"
                android:layout_marginTop="@dimen/t10dp"
                android:layout_marginRight="@dimen/t20dp"
                android:layout_below="@+id/organizationTextView">
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:textSize="@dimen/t16sp"
                    android:textColor="@color/text_color_rate_us_dialog_background"
                    android:id="@+id/statusMessage"
                    android:paddingLeft="@dimen/t20dp"
                    android:paddingTop="@dimen/t15dp"
                    android:paddingRight="@dimen/t20dp"
                    android:paddingBottom="@dimen/t15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/t150dp"
                    emojicon:emojiconSize="@dimen/t16sp"/>
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:textSize="@dimen/t16sp"
                    android:textColor="@color/text_color_rate_us_dialog_background"
                    android:id="@+id/invitedMessage"
                    android:paddingLeft="@dimen/t20dp"
                    android:paddingTop="@dimen/t24dp"
                    android:paddingRight="@dimen/t20dp"
                    android:paddingBottom="@dimen/t24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    emojicon:emojiconSize="@dimen/t16sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/horizontalLine"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t1dp"
                android:layout_below="@+id/messageLayout"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/friendBtnLayout"
                android:padding="@dimen/t12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/NotfriendBtnLayout"
                android:layout_below="@+id/horizontalLine"
                android:layout_toEndOf="@+id/NotfriendBtnLayout">
                <LinearLayout
                    android:id="@+id/voiceCallLayout"
                    style="@style/UserInfoBtn">
                    <ImageView
                        android:id="@+id/voiceCall"
                        android:src="@drawable/btn_selector_voice_call"
                        android:contentDescription="[AID]FriendProfile_Call"
                        style="@style/UserInfoBtnImage"/>
                    <TextView
                        android:text="@string/voice_call"
                        style="@style/UserInfoBtnText"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/videoCallLayout"
                    style="@style/UserInfoBtn">
                    <ImageView
                        android:id="@+id/videoCall"
                        android:src="@drawable/btn_selector_video_call"
                        android:contentDescription="[AID]FriendProfile_VideoCall"
                        style="@style/UserInfoBtnImage"/>
                    <TextView
                        android:text="@string/video_call"
                        style="@style/UserInfoBtnText"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/chatLayout"
                    style="@style/UserInfoBtn">
                    <ImageView
                        android:id="@+id/chat"
                        android:src="@drawable/btn_selector_chat"
                        android:contentDescription="[AID]FriendProfile_Chat"
                        style="@style/UserInfoBtnImage"/>
                    <TextView
                        android:text="@string/u_launcher_title_messages"
                        style="@style/UserInfoBtnText"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/NotfriendBtnLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t183dp"
                android:layout_below="@+id/horizontalLine">
                <RelativeLayout
                    android:id="@+id/blockFriendLayout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/t50dp">
                    <ImageView
                        android:id="@+id/blockFriend"
                        android:layout_width="@dimen/t70dp"
                        android:layout_height="@dimen/t70dp"
                        android:src="@drawable/btns_block"/>
                    <TextView
                        android:textSize="@dimen/t13sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/t7dp"
                        android:text="@string/friends_friends_title_frieds_block"
                        android:layout_below="@+id/blockFriend"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/addfriendLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/addfriend"
                        android:layout_width="@dimen/t70dp"
                        android:layout_height="@dimen/t70dp"
                        android:src="@drawable/btns_add_friend"/>
                    <TextView
                        android:textSize="@dimen/t13sp"
                        android:textColor="#000000"
                        android:id="@+id/addfriendTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/t7dp"
                        android:text="@string/add_btn"
                        android:layout_below="@+id/addfriend"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/buttonLayout"
                android:paddingTop="@dimen/t12dp"
                android:paddingBottom="@dimen/t12dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_below="@+id/horizontalLine">
                <TextView
                    android:id="@+id/addRequestBtn"
                    android:layout_marginRight="@dimen/t12dp"
                    android:text="@string/friend_request_add"
                    style="@style/UserInfoInviteBtn"/>
                <TextView
                    android:id="@+id/textViewNotNow"
                    android:text="@string/friends_friends_title_request_not_now"
                    style="@style/UserInfoInviteBtn"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/cancelBtnLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/horizontalLine">
                <TextView
                    android:textSize="@dimen/t20dp"
                    android:textColor="@color/you_color_normal"
                    android:gravity="center"
                    android:id="@+id/requestSendText"
                    android:paddingTop="@dimen/t20dp"
                    android:paddingBottom="@dimen/t32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/friend_request_sent_text"/>
                <TextView
                    android:textSize="@dimen/t20dp"
                    android:textColor="@color/you_color_white"
                    android:gravity="center"
                    android:id="@+id/cancel"
                    android:background="@drawable/bg_border_cancel_friend_request"
                    android:paddingLeft="@dimen/t8dp"
                    android:paddingTop="@dimen/t4dp"
                    android:paddingRight="@dimen/t8dp"
                    android:paddingBottom="@dimen/t4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friend_request_cancel_request"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/header"
        android:background="@color/you_color_alpha_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t46dp">
        <ImageView
            android:id="@+id/back"
            style="@style/TitleBar_BackButton3"/>
        <TextView
            android:textSize="@dimen/t20sp"
            android:textColor="@color/white"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
