<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_backup_cpy_displaytitle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">
        <TextView
            android:gravity="center_horizontal"
            android:background="@drawable/ic_ycp"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">
        <TextView
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:id="@+id/auto_backup_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="@string/dialog_auto_backup_description"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#b2b2b2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <TextView
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#55c517"
            android:gravity="center"
            android:id="@+id/EnableAutoBackupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_backup_message_btn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#b2b2b2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <TextView
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="#55c517"
            android:id="@+id/RemnidMeLaterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remind_me_later_message_btn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
