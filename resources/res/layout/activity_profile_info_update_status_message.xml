<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ProfileInfoUpdateHeader"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/ProfileInfoUpdateBackBtn"
            android:contentDescription="[AID]ProfileName_Back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:id="@+id/ProfileInfoUpdateTitle"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/you_color_normal_gray_text"
        android:id="@+id/ProfileInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="22dp"
        android:text="@string/profile_whats_up_info"
        android:maxLines="1"
        android:layout_below="@+id/ProfileInfoUpdateHeader"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/you_color_normal_gray"
        android:id="@+id/ShowWordsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:layout_below="@+id/ProfileInfoUpdateHeader"
        android:layout_alignParentRight="true"/>
    <com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout
        android:id="@+id/ProfileInfoUpdateEditArea"
        android:background="@drawable/bg_edittext_normal_gray_border"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="26dp"
        android:layout_below="@+id/ProfileInfoUpdateHeader"
        app:guideline_height="218"
        app:guideline_width="922">
        <RelativeLayout
            android:background="@drawable/bg_edittext_normal_gray_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="[AID]WhatsUP_Text">
            <com.rockerhieu.emojicon.EmojiconEditText
                android:textSize="18sp"
                android:textColor="@color/text_sticker_setting_default"
                android:gravity="top"
                android:id="@+id/ProfileInfoUpdateEdit"
                android:background="@null"
                android:paddingLeft="11dp"
                android:paddingTop="8dp"
                android:paddingRight="31dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="@integer/MaxStatusMessageLength"
                android:lineSpacingExtra="6dp"
                android:contentDescription="[AID]ProfileName_EditText"
                android:textCursorDrawable="@null"/>
            <ImageView
                android:id="@+id/ProfileInfoUpdateXImage"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/iocn_display_name_x"
                android:layout_toLeftOf="@+id/ProfileInfoUpdateEdit"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout>
    <Button
        android:id="@+id/ProfileInfoUpdateSaveBtn"
        android:layout_marginTop="30dp"
        android:text="@string/profile_display_name_save_btn"
        android:layout_below="@+id/ProfileInfoUpdateEditArea"
        android:layout_centerHorizontal="true"
        android:contentDescription="[AID]ProfileName_Save"
        style="@style/AppButtonStyleGeneral"/>
</RelativeLayout>
