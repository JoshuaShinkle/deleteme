<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    style="@style/ForumsAndPollsItem">
    <include layout="@layout/view_item_bulletin_basic"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t5dp"
        android:layout_below="@+id/item_title"
        android:layout_alignLeft="@+id/item_title">
        <View
            android:background="@drawable/icons_time"
            android:layout_marginLeft="0dp"
            style="@style/ForumsAndPollsIcon"/>
        <TextView
            android:id="@+id/textViewCreatedTime"
            style="@style/ForumsAndPollsIconText"/>
        <View
            android:background="@drawable/poll_icons_vote"
            style="@style/ForumsAndPollsIcon"/>
        <TextView
            android:id="@+id/textViewVotesCount"
            style="@style/ForumsAndPollsIconText"/>
    </LinearLayout>
</RelativeLayout>
