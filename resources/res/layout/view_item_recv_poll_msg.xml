<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:paddingLeft="@dimen/t3dp"
    android:paddingRight="@dimen/t3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/itemCheckBox"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
        android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        style="@style/ViewItemMessageCheckBox"/>
    <ImageView
        android:id="@+id/ChatMessageAvatar"
        android:layout_toRightOf="@+id/itemCheckBox"
        style="@style/ViewItemRecvAvatar"/>
    <com.rockerhieu.emojicon.EmojiconTextView
        android:textColor="#000000"
        android:id="@+id/ChatMessageNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@+id/ChatMessageAvatar"
        android:layout_alignParentTop="true"
        style="@style/ViewItemRecvName"/>
    <RelativeLayout
        android:id="@+id/contentLayout"
        android:background="@drawable/chat_bg_l_s5"
        android:paddingLeft="@dimen/t18dp"
        android:paddingTop="@dimen/t10dp"
        android:paddingRight="@dimen/t5dp"
        android:paddingBottom="@dimen/t10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ChatMessageAvatar"
        android:layout_below="@+id/ChatMessageNameTextView">
        <ImageView
            android:id="@+id/imageViewPoll"
            android:layout_width="@dimen/t13dp"
            android:layout_height="@dimen/t13dp"
            android:layout_marginTop="@dimen/t3dp"
            android:src="@drawable/icon_polls_blue"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/chat_textfontsize"
            android:textColor="#000000"
            android:ellipsize="end"
            android:id="@+id/ChatMessageContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t6dp"
            android:minWidth="@dimen/t100dp"
            android:text="Messages"
            android:maxLines="4"
            android:layout_toRightOf="@+id/imageViewPoll"
            android:lineSpacingExtra="@dimen/t2dp"
            style="@style/ViewItemRecvMsg"/>
        <View
            android:id="@+id/horizontal_line"
            android:background="@color/you_color_normal_blue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t1dp"
            android:layout_marginTop="@dimen/t10dp"
            android:layout_marginBottom="@dimen/t7dp"
            android:layout_below="@+id/ChatMessageContentTextView"
            android:layout_alignLeft="@+id/ChatMessageContentTextView"
            android:layout_alignRight="@+id/ChatMessageContentTextView"/>
        <RelativeLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line"
            android:layout_alignRight="@+id/horizontal_line">
            <ImageView
                android:id="@+id/imageViewGoto"
                android:layout_width="@dimen/t16dp"
                android:layout_height="@dimen/t16dp"
                android:src="@drawable/icon_link_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/chat_textfontsize"
                android:textColor="@color/you_color_normal_blue_text"
                android:id="@+id/textViewVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/t3dp"
                android:text="@string/vote"
                android:layout_toLeftOf="@+id/imageViewGoto"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/t8sp"
        android:textColor="#000000"
        android:id="@+id/ChatMessageTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t2dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/contentLayout"
        android:layout_alignBottom="@+id/contentLayout"/>
</RelativeLayout>
