<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/TitleBar">
    <RelativeLayout
        android:id="@+id/top_bar_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/top_bar_right_panel"
        android:layout_toRightOf="@+id/top_bar_left_panel"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/top_bar_left_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/top_bar_btn_back"
            android:contentDescription="[AID]Chat_AddMember_Back"
            style="@style/TitleBar_BackButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top_bar_right_panel"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/top_bar_right_btn"
            android:layout_width="@dimen/t36dp"
            android:layout_height="@dimen/t36dp"
            android:layout_marginLeft="@dimen/t10dp"
            android:layout_marginRight="@dimen/t10dp"
            style="@style/project_send_button"/>
    </LinearLayout>
</RelativeLayout>
