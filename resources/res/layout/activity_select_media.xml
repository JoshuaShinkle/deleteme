<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_for_selection"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.cyberlink.you.pages.photoimport.view.TouchViewPager
                android:layout_gravity="center"
                android:id="@+id/viewpager"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"/>
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/back"
            android:background="@null"
            android:layout_width="@dimen/touch_image_tool_width"
            android:layout_height="@dimen/touch_image_tool_height"
            android:src="@drawable/icon_gride"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:contentDescription="[AID]SelectMeida_Back"/>
        <ImageView
            android:id="@+id/selectBtn"
            android:layout_width="@dimen/touch_image_tool_width"
            android:layout_height="@dimen/touch_image_tool_height"
            android:src="@drawable/image_selector_photo_select_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:contentDescription="[AID]SelectMeida_Checked"/>
        <TextView
            android:id="@+id/menuOperation"
            android:background="@drawable/image_selector_common_button"
            android:visibility="visible"
            android:contentDescription="[AID]SelectMeida_Send"
            style="@style/AppButtonStyleForSelectionDelete"/>
    </RelativeLayout>
</RelativeLayout>
