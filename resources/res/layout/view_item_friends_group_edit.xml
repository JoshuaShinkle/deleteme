<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativeLayoutContainer"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/GroupEditCircleImageView"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/pic_default"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/AvatarImageView"/>
        <com.cyberlink.widget.Button2
            android:id="@+id/GroupEditItemBtn"
            android:background="@drawable/btn_blue_resent"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/FriendsFriendsInvitingButton"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/t16dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:id="@+id/GroupEditFriendTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/GroupEditItemBtn"
            android:layout_toRightOf="@+id/GroupEditCircleImageView"
            android:layout_centerVertical="true"/>
        <View
            android:background="@color/you_color_listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayoutInviteBtn"
        android:background="@drawable/bg_radius_button"
        android:visibility="gone"
        android:layout_width="198dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/t16dp"
            android:textColor="@color/you_color_white"
            android:gravity="center"
            android:id="@+id/textViewInviteBtn"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_add_follow"
            android:layout_toLeftOf="@+id/textViewInviteBtn"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
