<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentList"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/noConnectionText"
        android:visibility="gone"
        style="@style/WarningMessageNoConnection"/>
    <ImageView
        android:id="@+id/dial_phone"
        android:layout_width="@dimen/t80dp"
        android:layout_height="@dimen/t80dp"
        android:layout_marginRight="@dimen/t15dp"
        android:layout_marginBottom="@dimen/t45dp"
        android:src="@drawable/image_selector_phone_dial"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/recentCallEmptyView"
        android:text="@string/phone_fragment_no_recent_calls"
        style="@style/NoResultsTextView"/>
</RelativeLayout>
