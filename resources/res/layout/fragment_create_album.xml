<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cyberlink.you.widgetpool.common.EmojiconEditTextWithLengthFilter
        android:textColorHint="#e6e6e6"
        android:id="@+id/CreatealbumNameText"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="9dp"
        android:hint="@string/enter_album_name"
        android:maxLines="1"
        android:ems="10"
        android:maxLength="@integer/max_input_length_album_name"
        style="@style/AppEditTextStyleCreateGroup"/>
    <GridView
        android:gravity="center"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/photo_list_grid_view_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/photo_list_grid_view_margin"
        android:numColumns="3"/>
</LinearLayout>
