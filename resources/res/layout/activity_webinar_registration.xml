<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/TitleBar"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/HeaderBackBtn"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:text="@string/clw_registration_title"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_register_success"
        style="@style/webinarRegistrationLinearLayout">
        <TextView
            android:id="@+id/registeredTitle"
            android:text="@string/clw_registration_success_title"
            style="@style/webinarRegistrationBasicText.Big.Padding"/>
        <TextView
            android:paddingLeft="@dimen/t20dp"
            android:paddingRight="@dimen/t20dp"
            android:text="@string/clw_registration_success_description"
            style="@style/webinarRegistrationBasicText.HasMinLine"/>
        <Button
            android:id="@+id/btnJoinWebinar"
            android:text="@string/ok"
            style="@style/AppButtonStyleGeneral.Short"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_under_review"
        style="@style/webinarRegistrationLinearLayout">
        <TextView
            android:id="@+id/underReviewTitle"
            android:text="@string/clw_registration_under_process_title"
            style="@style/webinarRegistrationBasicText.Big.Padding"/>
        <TextView
            android:text="@string/clw_registration_under_process_description"
            style="@style/webinarRegistrationBasicText.HasMinLine"/>
        <Button
            android:id="@+id/btnOK"
            android:text="@string/ok"
            style="@style/AppButtonStyleGeneral.Short"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TitleBar">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/t32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/t20dp"
                android:paddingTop="@dimen/t24dp"
                android:paddingRight="@dimen/t20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/clw_registration_title"
                    android:id="@+id/webinarTitle"
                    android:paddingBottom="@dimen/t8dp"
                    style="@style/webinarRegistrationBasicText.Big"/>
                <TextView
                    android:textColor="@color/clw_registration_time"
                    android:id="@+id/webinarTime"
                    style="@style/webinarRegistrationBasicText"/>
                <TextView
                    android:paddingTop="@dimen/t24dp"
                    android:paddingBottom="@dimen/t10dp"
                    android:text="@string/clw_registration_description"
                    style="@style/webinarRegistrationBasicText"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/t36dp"
                android:paddingRight="@dimen/t36dp"
                android:paddingBottom="@dimen/t48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/registerEmail"
                    layout="@layout/view_registration_basic_info"/>
                <include
                    android:id="@+id/registerName"
                    layout="@layout/view_registration_basic_info"/>
                <include
                    android:id="@+id/preSurveyOrganization"
                    layout="@layout/view_registration_pre_survey"/>
                <include
                    android:id="@+id/preSurveyTitle"
                    layout="@layout/view_registration_pre_survey"/>
                <include
                    android:id="@+id/preSurveyDepartment"
                    layout="@layout/view_registration_pre_survey"/>
                <include
                    android:id="@+id/preSurveyCompanyURL"
                    layout="@layout/view_registration_pre_survey"/>
                <include
                    android:id="@+id/preSurveyRegion"
                    layout="@layout/view_registration_pre_survey"/>
                <include
                    android:id="@+id/preSurveyPhone"
                    layout="@layout/view_registration_pre_survey"/>
            </LinearLayout>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnRegister"
                android:text="@string/clw_registration_btn_register"
                style="@style/AppButtonStyleGeneral.Short"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
