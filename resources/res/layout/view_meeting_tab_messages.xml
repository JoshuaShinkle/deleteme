<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fakeStatusBar"
        android:background="@color/status_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/messageHeader"
        android:layout_below="@+id/fakeStatusBar"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/btn_meeting_back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:text="@string/clm_tab_messages"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fake_message_input"
        android:layout_below="@+id/messageHeader">
        <ListView
            android:id="@+id/messageListView"
            android:paddingBottom="10dp"
            android:clickable="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:divider="@android:color/transparent"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/you_color_65_percentage_light_gray"
            android:id="@+id/newMessageText"
            android:background="@color/you_color_75_percentage_dark"
            android:padding="10dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fake_message_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/fragment_message_input"/>
    </RelativeLayout>
</RelativeLayout>
