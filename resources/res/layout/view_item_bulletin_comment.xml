<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/color_selector_comment_list_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/bulletin_comment_unread_layout"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="@dimen/t12sp"
            android:id="@+id/unread_button"
            android:layout_width="@dimen/t231dp"
            android:layout_height="@dimen/t25dp"
            android:text="@string/bulletin_show_previous_replies"
            android:layout_centerHorizontal="true"
            style="@style/AppButtonStyleGeneral"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/clicking_area_bulletin_comment"
        android:paddingLeft="14dp"
        android:paddingTop="10dp"
        android:paddingRight="14dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bulletin_comment_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            style="@style/AvatarImageView"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bulletin_comment_name_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bulletin_comment_avatar">
            <com.rockerhieu.emojicon.EmojiconTextView
                android:textSize="12sp"
                android:textColor="@color/you_color_normal"
                android:ellipsize="end"
                android:id="@+id/bulletin_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/you_color_normal"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:singleLine="true"/>
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/bulletin_comment_unread_icon"
                android:background="@drawable/comment_mark_new_forums"
                android:visibility="gone"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bulletin_comment_content_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/bulletin_comment_avatar"
            android:layout_below="@+id/bulletin_comment_name_area"
            android:layout_alignLeft="@+id/bulletin_comment_name_area">
            <com.rockerhieu.emojicon.EmojiconTextView
                android:textSize="15sp"
                android:textColor="@color/you_color_normal"
                android:ellipsize="end"
                android:id="@+id/bulletin_comment_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/bulletin_comment_separate"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_below="@+id/bulletin_comment_text"/>
            <ImageView
                android:id="@+id/bulletin_comment_photo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bulletin_comment_separate"/>
            <com.cyberlink.you.sticker.view.StickerImageView
                android:id="@+id/bulletin_comment_sticker"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/bulletin_comment_video_area"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/bulletin_comment_video_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/bulletin_comment_video_btn"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/video_btn_play_n"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/you_color_white"
                    android:id="@+id/bulletin_comment_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="5dp"
                    android:text="03:00"
                    android:layout_alignLeft="@+id/bulletin_comment_video_thumbnail"
                    android:layout_alignBottom="@+id/bulletin_comment_video_thumbnail"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bulletin_comment_audio_area"
                android:background="@drawable/bg_bulletin_comment_audio"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:id="@+id/bulletin_comment_audio_op"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_play"/>
                    <ImageView
                        android:id="@+id/bulletin_comment_audio_stop"
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_stop"/>
                </RelativeLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/demarcation"
                    android:layout_width="1dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_voice"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/you_color_normal"
                    android:gravity="center_vertical"
                    android:id="@+id/bulletin_comment_audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bulletin_comment_content_area"
            android:layout_alignLeft="@+id/bulletin_comment_name_area">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/bulletin_item_area_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icons_time"
                    android:layout_width="13dp"
                    android:layout_height="13dp"/>
                <TextView
                    android:textSize="@dimen/t16dp"
                    android:textColor="@color/you_color_normal_gray_text"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bulletin_item_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="8 days ago"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bulletin_item_like_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bulletin_item_like_icon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icons_heart_n"/>
                <TextView
                    android:textSize="@dimen/t16dp"
                    android:textColor="@color/you_color_normal_gray_text"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bulletin_item_string_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/like_D"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
