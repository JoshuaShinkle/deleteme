<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/backgroundView"
        android:background="#80000000"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:background="@drawable/background_message_dialog"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <include
            android:id="@+id/MessageDialogMessageBody"
            android:layout_width="@dimen/f266dp"
            android:layout_height="wrap_content"
            layout="@layout/layout_unit_message_dialog_body"/>
        <com.rockerhieu.emojicon.EmojiconEditText
            android:textSize="@dimen/t14dp"
            android:textColorHint="@color/ycl_text_style_c"
            android:id="@+id/MessageDialogEditText"
            android:background="@drawable/bg_input_editor_underline"
            android:padding="@dimen/t3dp"
            android:visibility="gone"
            android:layout_width="@dimen/f266dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t18dp"
            android:layout_marginRight="@dimen/t18dp"
            android:layout_marginBottom="@dimen/t18dp"
            android:hint="@string/ycl_display_name_hint"
            android:singleLine="true"
            android:layout_below="@+id/MessageDialogMessageBody"
            android:imeOptions="actionDone"/>
        <RelativeLayout
            android:layout_width="@dimen/f270dp"
            android:layout_height="@dimen/f54dp"
            android:layout_marginLeft="@dimen/t13dp"
            android:layout_marginTop="@dimen/t13dp"
            android:layout_marginRight="@dimen/t13dp"
            android:layout_below="@+id/MessageDialogEditText">
            <TextView
                android:textSize="@dimen/t16dp"
                android:textColor="@color/ycl_text_style_h"
                android:gravity="center"
                android:id="@+id/MessageDialogButton1"
                android:background="@drawable/bg_color_selector_transparent_text_view"
                android:padding="@dimen/t6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/t64dp"
                android:text="@string/bc_dialog_button_yes"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="@dimen/t16dp"
                android:textColor="@color/ycl_text_style_h"
                android:gravity="center"
                android:id="@+id/MessageDialogButton2"
                android:background="@drawable/bg_color_selector_transparent_text_view"
                android:padding="@dimen/t6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/t64dp"
                android:text="@string/bc_dialog_button_no"
                android:layout_toLeftOf="@+id/MessageDialogButton1"/>
            <TextView
                android:textSize="@dimen/t16dp"
                android:textColor="@color/ycl_text_style_h"
                android:gravity="center"
                android:id="@+id/MessageDialogButton3"
                android:background="@drawable/bg_color_selector_transparent_text_view"
                android:padding="@dimen/t6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="@dimen/t64dp"
                android:text="@string/bc_dialog_button_cancel"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
