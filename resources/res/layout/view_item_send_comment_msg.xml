<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ViewItemSendLayout">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/ChatMessageSendFail"
                        android:visibility="gone"
                        android:layout_width="@dimen/t20dp"
                        android:layout_height="@dimen/t20dp"
                        android:src="@drawable/icon_send_failed"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/ChatMessageReadCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        style="@style/ViewItemSendRead"/>
                    <ProgressBar
                        android:id="@+id/sendingProgressbar"
                        android:layout_width="@dimen/t25dp"
                        android:layout_height="@dimen/t25dp"/>
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/ChatMessageTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        style="@style/ViewItemSendTime"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ChatMessageContentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/ChatMessageClickLayout"
                        android:background="@drawable/chat_bg_r_s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/t2dp"
                        android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                        android:layout_alignTop="@+id/ChatMessageContentLayout2"
                        android:layout_alignRight="@+id/ChatMessageContentLayout2"
                        android:layout_alignBottom="@+id/ChatMessageContentLayout2"/>
                    <RelativeLayout
                        android:id="@+id/ChatMessageContentLayout2"
                        android:paddingLeft="@dimen/t6dp"
                        android:paddingTop="@dimen/t5dp"
                        android:paddingRight="@dimen/t14dp"
                        android:paddingBottom="@dimen/t5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/contentLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/t10dp"
                            android:layout_centerVertical="true">
                            <com.rockerhieu.emojicon.EmojiconTextView
                                android:textSize="@dimen/chat_comment_textfontsize"
                                android:textColor="@color/chat_message_sender_text"
                                android:textColorLink="@color/chat_message_sender_hyperlink"
                                android:ellipsize="end"
                                android:id="@+id/ChatMessageContentTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="4"
                                android:layout_alignParentLeft="true"
                                android:lineSpacingExtra="@dimen/t3dp"
                                emojicon:emojiconSize="30dp"/>
                            <RelativeLayout
                                android:layout_gravity="center"
                                android:id="@+id/voiceLayout"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true">
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/playbtn"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="5dp"
                                        android:src="@drawable/icon_play"/>
                                    <View
                                        android:layout_gravity="center"
                                        android:background="@drawable/demarcation"
                                        android:layout_width="@dimen/t1dp"
                                        android:layout_height="@dimen/t19dp"
                                        android:layout_marginRight="@dimen/t5dp"/>
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="@dimen/t20dp"
                                        android:layout_height="@dimen/t20dp"
                                        android:layout_marginRight="@dimen/t5dp"
                                        android:src="@drawable/icon_voice"
                                        android:scaleType="fitCenter"/>
                                    <TextView
                                        android:textSize="@dimen/t15sp"
                                        android:textColor="#000000"
                                        android:id="@+id/VoiceTimeTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/PhotoContentLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/contentLayout"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:id="@+id/ChatMessageContentPhotoView"
                                android:layout_width="@dimen/t85dp"
                                android:layout_height="@dimen/t85dp"
                                android:scaleType="centerCrop"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:id="@+id/ChatMessageContentPhotoPenView"
                                android:visibility="gone"
                                android:layout_width="@dimen/t13dp"
                                android:layout_height="@dimen/t13dp"
                                android:layout_marginTop="@dimen/t2dp"
                                android:layout_marginRight="@dimen/t2dp"
                                android:src="@drawable/doodle_brush_color_thumnail_05"
                                android:scaleType="centerInside"
                                android:layout_alignTop="@+id/ChatMessageContentPhotoView"
                                android:layout_alignRight="@+id/ChatMessageContentPhotoView"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/scheduleSendMask"
                        android:background="@color/you_color_50_percentage_white"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                        android:layout_alignTop="@+id/ChatMessageContentLayout2"
                        android:layout_alignRight="@+id/ChatMessageContentLayout2"
                        android:layout_alignBottom="@+id/ChatMessageContentLayout2"/>
                    <ImageView
                        android:id="@+id/urlImage"
                        android:paddingBottom="@dimen/t6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/t8dp"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"
                        android:layout_below="@+id/ChatMessageContentLayout2"
                        android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                        android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                    <TextView
                        android:textSize="@dimen/chat_textfontsize"
                        android:textColor="@color/you_color_normal"
                        android:ellipsize="end"
                        android:id="@+id/urlTitle"
                        android:paddingLeft="@dimen/t6dp"
                        android:paddingRight="@dimen/t6dp"
                        android:paddingBottom="@dimen/t6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/t8dp"
                        android:maxLines="2"
                        android:layout_below="@+id/urlImage"
                        android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                        android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                    <TextView
                        android:textSize="@dimen/chat_comment_textfontsize"
                        android:textColor="#454545"
                        android:ellipsize="end"
                        android:id="@+id/urlDescription"
                        android:paddingLeft="@dimen/t6dp"
                        android:paddingRight="@dimen/t6dp"
                        android:paddingBottom="@dimen/t6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/t8dp"
                        android:maxLines="2"
                        android:layout_below="@+id/urlTitle"
                        android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                        android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/urlMultiPreview"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/t8dp"
                        android:layout_below="@+id/ChatMessageContentLayout2"
                        android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                        android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/explode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/t11sp"
            android:textColor="#ff0000"
            android:id="@+id/ttl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t6dp"
            android:layout_marginRight="@dimen/t11dp"
            android:includeFontPadding="false"
            android:layout_below="@+id/layout1"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
