<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_width="@dimen/checkbox_size_small"
            android:layout_height="@dimen/checkbox_size_small"
            android:layout_marginLeft="10dp"
            android:src="@drawable/image_selector_edit_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/itemCheckBox"
            android:layout_centerVertical="true"
            style="@style/AvatarImageView"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="16sp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:id="@+id/userShowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/userAvatar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
