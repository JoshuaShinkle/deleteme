<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/CancelBtn"
            android:contentDescription="[AID]ShareMedia_Back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:id="@+id/topBarTitle"
            android:text="@string/share_media_title"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/menuLayoutArea"
        android:background="@color/you_color_light_gray"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/header">
        <TextView
            android:id="@+id/friendBtn"
            android:text="@string/friends_friends_title_frieds"
            android:contentDescription="[AID]ShareMedia_Friend"
            style="@style/ShareMediaTabTextView"/>
        <View
            android:background="@color/you_color_normal_gray"
            android:layout_width="1dp"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/groupBtn"
            android:text="@string/friends_friends_title_groups"
            android:contentDescription="[AID]ShareMedia_Group"
            style="@style/ShareMediaTabTextView"/>
        <View
            android:background="@color/you_color_normal_gray"
            android:layout_width="1dp"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/chatBtn"
            android:text="@string/chats"
            android:contentDescription="[AID]ShareMedia_Chat"
            style="@style/ShareMediaTabTextView"/>
    </LinearLayout>
    <ListView
        android:id="@+id/shareListView"
        android:layout_above="@+id/linearLayoutLayoutSearch"
        android:layout_below="@+id/menuLayoutArea"
        style="@style/grayDividerListView"/>
    <TextView
        android:id="@+id/ShareMediaEmptyView"
        style="@style/NoResultsTextView"/>
    <RelativeLayout
        android:id="@+id/AlphabeticScrollTextLayout"
        android:background="@color/you_color_scroll_bg_gray"
        android:visibility="gone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="40sp"
            android:textColor="@color/white"
            android:id="@+id/AlphabeticScrollTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayoutLayoutSearch"
        android:background="#e1e1e1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send">
        <include layout="@layout/search_edit_token_people_and_group"/>
    </LinearLayout>
    <Button
        android:id="@+id/send"
        android:background="@drawable/image_selector_common_button"
        android:visibility="visible"
        android:text="@string/forward"
        style="@style/AppButtonStyleForSelectionDelete"/>
</RelativeLayout>
