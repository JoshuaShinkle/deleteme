<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:text="@string/dialog_rename_album_title"/>
    <RelativeLayout
        android:background="@drawable/bg_edittext_normal_gray_border"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="9dp">
        <com.cyberlink.you.widgetpool.common.EmojiconEditTextWithLengthFilter
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/renameEditText"
            android:background="@null"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="33dp"
            android:hint=""
            android:cursorVisible="true"
            android:maxLines="1"
            android:maxLength="@integer/max_input_length_album_name"
            android:inputType="text"
            android:contentDescription="[AID]AlbumRename_EditText"
            android:textCursorDrawable="@null"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/clearAlbumNameBtn"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/iocn_display_name_x"
            android:layout_toLeftOf="@+id/renameEditText"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="17dp"
        android:text="@string/dialog_rename_album_note"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <Button
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/renameCancelBtn"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile_update_public_id_dialog_cancel"
                android:layout_weight="1"
                android:contentDescription="[AID]AlbumRename_Cancel"/>
            <Button
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/renameOkBtn"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ok"
                android:layout_weight="1"
                android:contentDescription="[AID]AlbumRename_Ok"/>
        </LinearLayout>
        <View
            android:background="@color/you_color_normal_gray_text"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <View
            android:background="@color/you_color_normal_gray_text"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>
