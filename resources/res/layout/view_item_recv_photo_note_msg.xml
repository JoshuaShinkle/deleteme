<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:paddingTop="6.6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ChatMessageContentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <ImageView
            android:id="@+id/ChatMessageAvatar"
            android:layout_toRightOf="@+id/itemCheckBox"
            style="@style/ViewItemRecvAvatar"/>
        <ImageView
            android:id="@+id/ChatMessageBroadcasterTag"
            android:visibility="gone"
            android:layout_width="@dimen/t20dp"
            android:layout_height="@dimen/t20dp"
            android:layout_marginLeft="@dimen/t25dp"
            android:src="@drawable/icon_broadcast_tag"
            android:layout_alignLeft="@+id/ChatMessageAvatar"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/ChatMessageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_alignParentTop="true"
            style="@style/ViewItemRecvName"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_below="@+id/ChatMessageNameTextView">
            <RelativeLayout
                android:id="@+id/contentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cyberlink.you.activity.chatdialog.message.SelfDestructView
                    android:id="@+id/selfDestructImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/self_destruct_locker"/>
                <ImageView
                    android:id="@+id/ChatMessageContentPhotoView"
                    android:background="@drawable/bg_chat_photo_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <RelativeLayout
                    android:id="@+id/ChatPhotoCommentCntView"
                    android:visibility="invisible"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_alignTop="@+id/ChatMessageContentPhotoView"
                    android:layout_alignRight="@+id/ChatMessageContentPhotoView">
                    <ImageView
                        android:id="@+id/commentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mark_gray"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/you_color_normal"
                        android:id="@+id/commentStringText"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/explode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/ChatMessageNoteArrowLayout"
                    android:background="@drawable/photo_voice_message_arrow_gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:layout_below="@+id/ChatMessageContentPhotoView"
                    android:layout_alignLeft="@+id/ChatMessageContentPhotoView"/>
                <RelativeLayout
                    android:id="@+id/ChatMessageNoteLayout"
                    android:background="@drawable/photo_voice_message_bg_gray"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:layout_below="@+id/ChatMessageNoteArrowLayout"
                    android:layout_alignLeft="@+id/ChatMessageContentPhotoView">
                    <RelativeLayout
                        android:id="@+id/ChatMessageVoicePlayLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/playbtn"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/icon_play"/>
                            <View
                                android:layout_gravity="center"
                                android:background="@color/grayblack"
                                android:layout_width="1dp"
                                android:layout_height="19dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/icon_voice"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:id="@+id/VoiceTimeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/ChatMessageTextLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <com.rockerhieu.emojicon.EmojiconTextView
                            android:textSize="@dimen/chat_textfontsize"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:id="@+id/ChatMessageContentTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:layout_centerHorizontal="true"
                            emojicon:emojiconSize="32dp"
                            style="@style/ViewItemSendCreateMediaContent"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ChatMessageClickLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ChatMessageNoteLayout"
                    android:layout_alignTop="@+id/ChatMessageNoteLayout"
                    android:layout_alignRight="@+id/ChatMessageNoteLayout"
                    android:layout_alignBottom="@+id/ChatMessageNoteLayout"/>
                <TextView
                    android:textSize="8sp"
                    android:textColor="#000000"
                    android:id="@+id/ChatMessageTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/ChatMessageNoteLayout"
                    android:layout_alignBottom="@+id/ChatMessageNoteLayout"/>
                <ProgressBar
                    android:id="@+id/downloadProgressbar"
                    android:visibility="gone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/ChatMessageTimeTextView"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="11sp"
                android:textColor="#ff0000"
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/contentLayout"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
