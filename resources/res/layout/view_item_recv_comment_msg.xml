<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingTop="6.6dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ChatMessageContentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <ImageView
            android:id="@+id/ChatMessageAvatar"
            android:layout_toRightOf="@+id/itemCheckBox"
            style="@style/ViewItemRecvAvatar"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textColor="#000000"
            android:id="@+id/ChatMessageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_alignParentTop="true"
            style="@style/ViewItemRecvName"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_below="@+id/ChatMessageNameTextView">
            <RelativeLayout
                android:id="@+id/ChatMessageClickLayout"
                android:background="@drawable/chat_bg_l_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/commentLayout"
                android:layout_alignTop="@+id/commentLayout"
                android:layout_alignRight="@+id/commentLayout"
                android:layout_alignBottom="@+id/commentLayout"/>
            <RelativeLayout
                android:id="@+id/commentLayout"
                android:paddingLeft="@dimen/t12dp"
                android:paddingTop="@dimen/t5dp"
                android:paddingRight="@dimen/t8dp"
                android:paddingBottom="@dimen/t5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/contentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/t10dp"
                    android:layout_centerVertical="true">
                    <com.rockerhieu.emojicon.EmojiconTextView
                        android:textSize="@dimen/chat_comment_textfontsize"
                        android:textColor="#000000"
                        android:ellipsize="end"
                        android:id="@+id/ChatMessageContentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:lineSpacingExtra="@dimen/t3dp"
                        emojicon:emojiconSize="30dp"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:id="@+id/voiceLayout"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/playbtn"
                                android:layout_width="@dimen/t20dp"
                                android:layout_height="@dimen/t20dp"
                                android:layout_marginRight="@dimen/t5dp"
                                android:src="@drawable/icon_play"/>
                            <View
                                android:layout_gravity="center"
                                android:background="@color/grayblack"
                                android:layout_width="1dp"
                                android:layout_height="19dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="@dimen/t20dp"
                                android:layout_height="@dimen/t20dp"
                                android:layout_marginRight="@dimen/t5dp"
                                android:src="@drawable/icon_voice"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:textSize="@dimen/t15sp"
                                android:textColor="#000000"
                                android:layout_gravity="center"
                                android:id="@+id/VoiceTimeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <com.cyberlink.you.activity.chatdialog.message.SelfDestructView
                        android:id="@+id/selfDestructImage"
                        android:visibility="gone"
                        android:layout_width="@dimen/t50dp"
                        android:layout_height="@dimen/t50dp"
                        android:src="@drawable/self_destruct_locker"/>
                    <ImageView
                        android:id="@+id/explode"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/PhotoContentLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/contentLayout"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/ChatMessageContentPhotoView"
                        android:layout_width="@dimen/t85dp"
                        android:layout_height="@dimen/t85dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/ChatMessageContentPhotoPenView"
                        android:visibility="gone"
                        android:layout_width="@dimen/t13dp"
                        android:layout_height="@dimen/t13dp"
                        android:layout_marginTop="@dimen/t2dp"
                        android:layout_marginRight="@dimen/t2dp"
                        android:src="@drawable/doodle_brush_color_thumnail_05"
                        android:scaleType="centerInside"
                        android:layout_alignTop="@+id/ChatMessageContentPhotoView"
                        android:layout_alignRight="@+id/ChatMessageContentPhotoView"/>
                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/urlImage"
                android:paddingBottom="@dimen/t6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t8dp"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:layout_below="@+id/commentLayout"
                android:layout_alignLeft="@+id/commentLayout"
                android:layout_alignRight="@+id/commentLayout"/>
            <TextView
                android:textSize="@dimen/chat_textfontsize"
                android:textColor="@color/you_color_normal"
                android:ellipsize="end"
                android:id="@+id/urlTitle"
                android:paddingLeft="@dimen/t4dp"
                android:paddingRight="@dimen/t8dp"
                android:paddingBottom="@dimen/t6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t8dp"
                android:maxLines="2"
                android:layout_below="@+id/urlImage"
                android:layout_alignLeft="@+id/commentLayout"
                android:layout_alignRight="@+id/commentLayout"/>
            <TextView
                android:textSize="@dimen/chat_comment_textfontsize"
                android:textColor="#454545"
                android:ellipsize="end"
                android:id="@+id/urlDescription"
                android:paddingLeft="@dimen/t4dp"
                android:paddingRight="@dimen/t8dp"
                android:paddingBottom="@dimen/t6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t8dp"
                android:maxLines="2"
                android:layout_below="@+id/urlTitle"
                android:layout_alignLeft="@+id/commentLayout"
                android:layout_alignRight="@+id/commentLayout"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/urlMultiPreview"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t8dp"
                android:layout_below="@+id/commentLayout"
                android:layout_alignLeft="@+id/commentLayout"
                android:layout_alignRight="@+id/commentLayout"/>
            <TextView
                android:textSize="@dimen/t8sp"
                android:textColor="#000000"
                android:id="@+id/ChatMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t5dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/commentLayout"
                android:layout_alignBottom="@+id/commentLayout"/>
            <TextView
                android:textSize="@dimen/t11sp"
                android:textColor="#ff0000"
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t6dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/commentLayout"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
