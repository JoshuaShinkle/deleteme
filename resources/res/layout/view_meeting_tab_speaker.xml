<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fakeStatusBar"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/meetingAudioMeetingLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fakeStatusBar">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/clm_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/meetingActiveParticipantAvatar"
                android:layout_width="@dimen/clm_meeting_active_participant_avatar"
                android:layout_height="@dimen/clm_meeting_active_participant_avatar"
                android:layout_marginTop="@dimen/t100dp"
                android:layout_marginBottom="@dimen/t18dp"
                style="@style/AvatarImageView"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t10dp"
                android:layout_marginRight="@dimen/t10dp"
                android:layout_marginBottom="@dimen/t30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/meetingActiveParticipantRaiseHand"
                    android:background="@drawable/meeting_raise_hand"
                    android:visibility="gone"
                    android:layout_width="@dimen/t25dp"
                    android:layout_height="@dimen/t25dp"/>
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:textSize="@dimen/t25dp"
                    android:textColor="#ffffff"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:id="@+id/meetingActiveParticipantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t10dp"
                    android:maxLines="1"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/t28dp"
                android:textColor="@color/clm_inviting_status"
                android:layout_gravity="center_horizontal"
                android:id="@+id/meetingAudioMeetingTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/t18dp"
            android:textColor="#ffffff"
            android:id="@+id/meetingAudioMeetingTimerTextLand"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/t90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
