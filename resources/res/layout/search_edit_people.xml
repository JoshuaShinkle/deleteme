<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_border_search_people"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_bar_height">
    <ImageView
        android:id="@+id/SearchIconImageView"
        style="@style/SearchBarIcons.Icon"/>
    <ImageView
        android:id="@+id/btn_icon_cancel"
        android:background="@drawable/icon_quit"
        android:visibility="gone"
        style="@style/SearchBarIcons.Cancel"/>
    <EditText
        android:id="@+id/SearchEditText"
        android:hint="@string/friends_invitation_search_hint_only_id_email"
        android:layout_toLeftOf="@+id/btn_icon_cancel"
        android:layout_toRightOf="@+id/SearchIconImageView"
        android:contentDescription="[AID]SearchEditText"
        style="@style/SearchBarText"/>
</RelativeLayout>
