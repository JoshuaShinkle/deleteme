<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/write_post_add_photo_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BcWritePostProductListStyle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.cyberlink.you.feedback.UICImageView
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:auto_resize_mode="fill_width_auto_height"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/write_post_add_photo"
                android:background="@drawable/bc_write_post_photo_background"
                android:layout_width="match_parent"
                style="@style/BcWritePostPhotoPanelStyle">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/write_post_add_photo_plus"
                    android:src="@drawable/bc_write_post_icon_addphoto"
                    android:layout_centerHorizontal="true"
                    style="@style/BcWritePostPhotoIconStyle"/>
                <TextView
                    android:textColor="@color/bc_color_main_hint_text"
                    android:layout_gravity="center"
                    android:id="@+id/write_post_add_photo_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/write_post_add_photo_plus"
                    android:layout_centerHorizontal="true"
                    style="@style/BcWritePostPhotoIconTextStyle"/>
                <TextView
                    android:textSize="@dimen/t14sp"
                    android:textColor="@color/bc_color_main_required_hint_text"
                    android:layout_gravity="center"
                    android:id="@+id/write_post_add_photo_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/write_post_add_photo_hint"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <include layout="@layout/bc_view_item_product_tags"/>
        <EditText
            android:id="@+id/write_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:hint=""
            android:inputType="textMultiLine"
            style="@style/BcWritePostPhotoCommentTextStyle"/>
        <View
            android:id="@+id/write_post_separator"
            android:visibility="gone"
            android:layout_height="1dp"
            style="@style/BcSaperaterHStyle"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/delete_image_btn"
        android:src="@drawable/bc_write_post_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/BcWritePostDeletePhotoButtonStyle"/>
</RelativeLayout>
