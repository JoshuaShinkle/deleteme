<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/searchChat"
        android:layout_alignParentTop="true"
        style="@style/SearchContainer">
        <ImageView
            android:id="@+id/searchChatBackBtn"
            android:background="@drawable/image_selector_topbar_back_btn"
            android:visibility="gone"
            android:layout_width="@dimen/t34dp"
            android:layout_height="@dimen/t34dp"
            android:layout_marginRight="@dimen/t15dp"
            android:src="@drawable/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="[AID]Search_Back"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/searchChatBackBtn">
            <include layout="@layout/search_edit_normal"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/fakeClickView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchChat"/>
    <com.cyberlink.you.widgetpool.common.CLFragmentTabHost
        android:id="@+id/tabhost"
        android:background="@color/you_color_title_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchChat">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TabWidget
                android:orientation="horizontal"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>
            <FrameLayout
                android:id="@+id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"/>
        </LinearLayout>
    </com.cyberlink.you.widgetpool.common.CLFragmentTabHost>
    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabhost"/>
    <TextView
        android:id="@+id/noConnectionText"
        android:visibility="gone"
        style="@style/WarningMessageNoConnection"/>
    <TextView
        android:id="@+id/emptyTextView"
        style="@style/NoResultsTextView"/>
    <TextView
        android:id="@+id/hintTextView"
        android:layout_marginLeft="@dimen/t30dp"
        android:layout_marginRight="@dimen/t30dp"
        style="@style/NoResultsTextView"/>
    <ProgressBar
        android:id="@+id/progressbar_searching"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>
