<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/you_color_divider_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/you_color_normal_gray_text"
            android:id="@+id/expandableListViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/relativeLayoutAddUser"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/relativeLayoutAddUser"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:visibility="visible"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_add_blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
