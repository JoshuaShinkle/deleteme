<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/GroupMemberListHeader"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/GroupMemberListBackBtn"
            style="@style/TitleBar_BackButton"/>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/GroupMemberListTopBarTitleArea"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/GroupMemberListTitle"
                android:text="@string/edit_group"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                emojicon:emojiconSize="20sp"
                style="@style/TitleBar_RightTitle"/>
        </RelativeLayout>
        <com.cyberlink.widget.ImageView2
            android:id="@+id/GroupMemberListAddFriendArea"
            android:layout_alignParentRight="true"
            android:contentDescription="[AID]Group_AddMember"
            style="@style/TitleBar_AddButton"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/GroupMemberListListArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/GroupMemberListHeader">
        <RelativeLayout
            android:id="@+id/GroupMemberListEditArea"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/GroupMemberListSearchArea"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <include layout="@layout/search_edit_normal"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/GroupMemberListTopLine"
            android:layout_below="@+id/GroupMemberListEditArea"
            style="@style/gray_divider"/>
        <ListView
            android:id="@+id/GroupMemberListListView"
            android:layout_below="@+id/GroupMemberListTopLine"
            style="@style/grayDividerListView"/>
        <TextView
            android:id="@+id/GroupMemberListSearchEmptyView"
            style="@style/NoResultsTextView"/>
    </RelativeLayout>
</RelativeLayout>
