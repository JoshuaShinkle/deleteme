<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout style="@style/TitleBar">
        <ImageView
            android:id="@+id/BlockUserAlertBackBtn"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:text="@string/friends_friends_title_frieds_block"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/layoutBlockUserAlertFriendInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/BlockUserAlertAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AvatarImageView"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cover_block"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/t20dp"
            android:textColor="@color/you_color_normal_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/block_question_text"/>
        <TextView
            android:textSize="@dimen/t22dp"
            android:textColor="@color/you_color_normal"
            android:gravity="center"
            android:id="@+id/BlockUserAlertDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
        <TextView
            android:textSize="@dimen/t15dp"
            android:textColor="@color/you_color_normal_gray"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:text="@string/block_notice"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/BlockUserAlertButtonArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/BlockUserAlertCancel"
                android:layout_width="144dp"
                android:text="@string/profile_update_public_id_dialog_cancel"
                android:contentDescription="[AID]Block_Cancel"
                style="@style/AppButtonStyleGeneral"/>
            <View
                android:layout_width="13dp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/BlockUserAlertBlock"
                android:background="@drawable/image_selector_common_button_red"
                android:layout_width="144dp"
                android:text="@string/friends_friends_title_frieds_block"
                android:contentDescription="[AID]Block_Block"
                style="@style/AppButtonStyleGeneral"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/t15dp"
            android:textColor="@color/you_color_normal_gray"
            android:gravity="center"
            android:id="@+id/BlockUserAlertListLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="18dp"
            android:layout_above="@+id/BlockUserAlertButtonArea"/>
        <ProgressBar
            android:id="@+id/waitingCursor"
            android:visibility="gone"
            android:layout_width="@dimen/t48dp"
            android:layout_height="@dimen/t43dp"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>
</LinearLayout>
