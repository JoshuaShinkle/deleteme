<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cyberlink.you.widgetpool.common.FixedAspectRatioLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:guideline_height="88"
        app:guideline_width="1080">
        <com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:guideline_height="30"
            app:guideline_width="1080"/>
        <com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:guideline_height="58"
            app:guideline_width="1080">
            <RelativeLayout
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@drawable/bg_date_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/unread_line_message"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout>
    </com.cyberlink.you.widgetpool.common.FixedAspectRatioLinearLayout>
</RelativeLayout>
