<?xml version="1.0" encoding="utf-8"?>
<com.cyberlink.you.widgetpool.common.ChildPosAndSizeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:child_height="178"
    app:child_width="178"
    app:guideline_height="178"
    app:guideline_width="178">
    <com.cyberlink.you.widgetpool.common.ChildProportionLayout
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:guideline_height="178"
        app:guideline_width="178">
        <FrameLayout
            android:layout_gravity="center"
            android:background="@drawable/shadow_s"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:child_height="170"
            app:child_width="170">
            <com.cyberlink.you.widgetpool.common.ChildProportionLayout
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:guideline_height="170"
                app:guideline_width="170">
                <ImageView
                    android:id="@+id/effectGridPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/preloading_preset"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/effectThumbName"
                    android:background="@color/you_color_50_percentage_dark"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    app:child_height="56"
                    app:child_width="170"
                    style="@style/PresetGridItemTextStyle"/>
            </com.cyberlink.you.widgetpool.common.ChildProportionLayout>
        </FrameLayout>
        <View
            android:id="@+id/effectGridCheck"
            android:background="@drawable/image_selector_preset_thumbnail_selected"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.cyberlink.you.widgetpool.common.ChildProportionLayout>
</com.cyberlink.you.widgetpool.common.ChildPosAndSizeLayout>
