<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/previewFeedBackTopToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t43dp">
        <fragment
            android:name="com.cyberlink.you.feedback.TopBarFragment"
            android:id="@+id/fragment_topbar_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollview_preview_feedback_outter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/t2dp"
        android:fillViewport="true"
        android:layout_below="@+id/previewFeedBackTopToolBar">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BcFullActivityPaddingStyle">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/edit_feedback_image_btn"
                android:background="@drawable/bc_post_comment_text_background"
                android:paddingLeft="@dimen/t15dp"
                android:paddingRight="@dimen/t15dp"
                android:paddingBottom="@dimen/t10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/bc_feedback_title_description"
                    style="@style/BcFeedbackItemTitleStyle"/>
                <TextView
                    android:id="@+id/bc_feedback_description"
                    style="@style/BcFeedbackItemInfoStyle"/>
                <View
                    android:layout_marginTop="@dimen/t10dp"
                    style="@style/BcSaperaterHStyle"/>
                <TextView
                    android:text="@string/bc_feedback_title_email"
                    style="@style/BcFeedbackItemTitleStyle"/>
                <TextView
                    android:id="@+id/bc_feedback_email"
                    style="@style/BcFeedbackItemInfoStyle"/>
                <View
                    android:layout_marginTop="@dimen/t10dp"
                    style="@style/BcSaperaterHStyle"/>
                <TextView
                    android:text="@string/bc_feedback_title_appver"
                    style="@style/BcFeedbackItemTitleStyle"/>
                <TextView
                    android:id="@+id/bc_feedback_appver"
                    style="@style/BcFeedbackItemInfoStyle"/>
                <View
                    android:layout_marginTop="@dimen/t10dp"
                    style="@style/BcSaperaterHStyle"/>
                <TextView
                    android:text="@string/bc_feedback_title_devicemodel"
                    style="@style/BcFeedbackItemTitleStyle"/>
                <TextView
                    android:id="@+id/bc_feedback_devicemodel"
                    style="@style/BcFeedbackItemInfoStyle"/>
                <View
                    android:layout_marginTop="@dimen/t10dp"
                    style="@style/BcSaperaterHStyle"/>
                <TextView
                    android:text="@string/bc_feedback_title_osver"
                    style="@style/BcFeedbackItemTitleStyle"/>
                <TextView
                    android:id="@+id/bc_feedback_osver"
                    style="@style/BcFeedbackItemInfoStyle"/>
                <View
                    android:layout_marginTop="@dimen/t10dp"
                    style="@style/BcSaperaterHStyle"/>
                <TextView
                    android:text="@string/bc_feedback_title_time"
                    style="@style/BcFeedbackItemTitleStyle"/>
                <TextView
                    android:id="@+id/bc_feedback_time"
                    style="@style/BcFeedbackItemInfoStyle"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/bc_feedback_image_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_below="@+id/previewFeedBackTopToolBar"
        style="@style/BcTopShadowStyle"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/preview_image_mask"
        android:background="@color/bc_product_list_filter_mask_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cyberlink.you.feedback.UICImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
</RelativeLayout>
