<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_album_fragment_item_background"
    android:background="@color/you_color_listview_divider"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18sp"
        android:textColor="@drawable/color_selector_tab_text"
        android:gravity="center"
        android:id="@+id/chat_album_fragment_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <View
        android:gravity="center"
        android:id="@+id/chat_album_fragment_item_text2"
        android:background="@drawable/color_selector_tab_bottom_highlight"
        android:layout_width="75dp"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
