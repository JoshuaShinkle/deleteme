<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meetingInviteLayout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/meetingUserInfoLayout"
        android:background="@color/clm_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/meetingInviteeAvatar"
            android:layout_width="@dimen/clm_meeting_active_participant_avatar"
            android:layout_height="@dimen/clm_meeting_active_participant_avatar"
            android:layout_marginTop="@dimen/t120dp"
            android:layout_marginBottom="@dimen/t18dp"
            style="@style/AvatarImageView"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/t25dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/meetingInviteeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t10dp"
            android:layout_marginRight="@dimen/t10dp"
            android:maxLines="1"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/t20dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/meetingInviteeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t10dp"
            android:layout_marginRight="@dimen/t10dp"
            android:maxLines="1"/>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t5dp"
            android:layout_marginTop="@dimen/t40dp"
            android:layout_marginRight="@dimen/t5dp">
            <ImageView
                android:id="@+id/status_icon"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_meeting_tab_start_video_meeting"
                android:layout_alignTop="@+id/fakeMeetingInviteStatus"
                android:layout_alignBottom="@+id/fakeMeetingInviteStatus"/>
            <TextView
                android:textSize="@dimen/t24dp"
                android:id="@+id/fakeMeetingInviteStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/status_icon"
                android:layout_centerVertical="true"/>
            <com.rockerhieu.emojicon.EmojiconTextView
                android:textSize="@dimen/t24dp"
                android:textColor="@color/clm_inviting_status"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/meetingInviteStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:maxLines="@integer/clm_status_layout_line_num"
                android:layout_toRightOf="@+id/status_icon"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/meetingBottomButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/meeting_inviting_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnMeetingInviteSpeaker"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/t45dp">
                <ImageView
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_speaker"/>
                <TextView
                    android:text="@string/clm_meeting_button_speaker"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnMeetingInviteHangUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_hang_up"/>
                <TextView
                    android:id="@+id/textMeetingInviteHangUp"
                    android:text="@string/clm_meeting_button_decline"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnMeetingInviteReceiveAudioCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t45dp">
                <ImageView
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_receive_call"/>
                <TextView
                    android:text="@string/voice_call"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnMeetingInviteReceiveVideoCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t45dp">
                <ImageView
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_receive_camera"/>
                <TextView
                    android:text="@string/video_call"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btnMeetingRejectMessage"
            android:padding="@dimen/t12dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/t12dp"
            android:layout_below="@+id/meeting_inviting_menu"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="@dimen/t24dp"
                android:layout_height="@dimen/t20dp"
                android:src="@drawable/meeting_chat"/>
            <TextView
                android:layout_marginLeft="@dimen/t5dp"
                android:layout_marginTop="0dp"
                android:text="@string/clm_meeting_button_message"
                style="@style/MeetingsButtonText"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/preJoinFailedBottomButtonLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/preJoinFailedButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/t25dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnPreJoinFailedCallAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/t45dp">
                <ImageView
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_receive_call"/>
                <TextView
                    android:id="@+id/preJoinFailedCallAgainText"
                    android:text="@string/clm_meeting_button_call_again"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnPreJoinFailedDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_hang_up"/>
                <TextView
                    android:text="@string/close"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/btnPreJoinFailedUpdate"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t45dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/t60dp"
                    android:layout_height="@dimen/t60dp"
                    android:src="@drawable/btn_meeting_update"/>
                <TextView
                    android:text="@string/clm_meeting_update_now"
                    style="@style/MeetingsButtonText"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/t20dp"
            android:textColor="@color/you_color_delete_red"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/preJoinFailedErrorMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t30dp"
            android:layout_marginRight="@dimen/t30dp"
            android:layout_marginBottom="@dimen/t22dp"
            android:maxLines="3"
            android:layout_above="@+id/preJoinFailedButtonsLayout"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
