<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ViewItemSendLayout">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ChatMessageContentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cyberlink.you.sticker.view.GifImageView
                    android:id="@+id/ChatMessageContentGifView"
                    android:padding="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    style="@style/ViewItemSendAnimSticker"/>
                <View
                    android:id="@+id/scheduleSendMask"
                    android:background="@color/you_color_50_percentage_white"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ChatMessageContentGifView"
                    android:layout_alignTop="@+id/ChatMessageContentGifView"
                    android:layout_alignRight="@+id/ChatMessageContentGifView"
                    android:layout_alignBottom="@+id/ChatMessageContentGifView"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/explode"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChatMessageContentLayout"
            android:layout_alignBottom="@+id/ChatMessageContentLayout"
            android:layout_centerVertical="true">
            <TextView
                android:textColor="#000000"
                android:id="@+id/ChatMessageReadCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                style="@style/ViewItemSendRead"/>
            <ProgressBar
                android:id="@+id/sendingProgressbar"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textColor="#000000"
                android:id="@+id/ChatMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"
                style="@style/ViewItemSendTime"/>
        </LinearLayout>
        <TextView
            android:textSize="11sp"
            android:textColor="#ff0000"
            android:id="@+id/ttl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="11dp"
            android:includeFontPadding="false"
            android:layout_below="@+id/ChatMessageContentLayout"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
