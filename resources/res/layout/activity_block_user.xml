<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/BlockUserActivityHeader"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/BlockUserActivityBackBtn"
            android:contentDescription="[AID]AddFriend_Back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:text="@string/setting_block_users_title"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <View
        android:id="@+id/BlockUserActivityDivisor"
        android:layout_below="@+id/BlockUserActivityHeader"
        style="@style/gray_divider"/>
    <ListView
        android:id="@+id/BlockUserActivityFreindsListView"
        android:layout_below="@+id/BlockUserActivityDivisor"
        style="@style/grayDividerListView"/>
</RelativeLayout>
