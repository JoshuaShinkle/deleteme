<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:guideline_height="360"
        app:guideline_width="480">
        <TextureView
            android:id="@+id/texture"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.cyberlink.you.widgetpool.common.FixedAspectRatioFrameLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/header"
        android:background="#80000000"
        style="@style/TitleBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back"
                    style="@style/TitleBar_BackButton"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <com.cyberlink.widget.ImageView2
                    android:id="@+id/flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_selector_flash_btn"/>
                <com.cyberlink.widget.ImageView2
                    android:id="@+id/switch_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_switch_camera"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/button_retry"
            android:layout_width="@dimen/bottombar_import_width"
            android:layout_height="@dimen/bottombar_import_height"
            android:layout_marginLeft="20dp"
            android:text="@string/video_record_retry"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="[AID]VideoRecord_Retake"
            style="@style/AppButtonStyleGeneral"/>
        <Button
            android:id="@+id/button_send"
            android:layout_width="@dimen/bottombar_import_width"
            android:layout_height="@dimen/bottombar_import_height"
            android:layout_marginRight="20dp"
            android:text="@string/video_record_send"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="[AID]VideoRecord_Send"
            style="@style/AppButtonStyleGeneral"/>
        <ImageView
            android:id="@+id/button_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/image_selector_video_record_btn"
            android:layout_centerInParent="true"
            android:contentDescription="[AID]VideoRecord_Record"/>
    </RelativeLayout>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/you_color_white"
        android:gravity="center_vertical"
        android:id="@+id/recording_time"
        android:background="@drawable/recording_time_bg"
        android:paddingLeft="25dp"
        android:visibility="gone"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/header"/>
</RelativeLayout>
