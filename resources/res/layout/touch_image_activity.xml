<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cyberlink.you.pages.photoimport.view.TouchViewPager
            android:layout_gravity="center"
            android:id="@+id/viewpager"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <CheckBox
                android:id="@+id/itemCheckBox"
                android:background="@drawable/custom_checkbox_touch_image"
                android:layout_width="@dimen/touch_image_tool_width"
                android:layout_height="@dimen/touch_image_tool_height"
                android:layout_marginLeft="-5dp"
                android:button="@null"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                style="@style/TitleBar2">
                <ImageButton
                    android:id="@+id/back"
                    android:background="@null"
                    android:layout_alignParentLeft="true"
                    style="@style/TitleBar_BackButton2"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/photoListToolbar"
        android:background="@color/you_color_light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t55dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnBottomDone"
            android:background="@drawable/image_selector_common_button"
            android:visibility="visible"
            style="@style/AppButtonStyleForSelectionDelete"/>
    </RelativeLayout>
</RelativeLayout>
