<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_introduce_album"
        android:layout_width="@dimen/t267dp"
        android:layout_height="@dimen/t267dp"
        android:layout_marginTop="@dimen/t32dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/t18dp"
        android:textColor="#373737"
        android:gravity="center"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t40dp"
        android:layout_marginTop="@dimen/t22dp"
        android:layout_marginRight="@dimen/t40dp"
        android:text="@string/albums_description"
        android:layout_below="@+id/image_introduce_album"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/viewAnchorAlbum"
        android:layout_width="@dimen/t63dp"
        android:layout_height="@dimen/t63dp"
        android:layout_marginRight="@dimen/t7dp"
        android:layout_marginBottom="@dimen/t7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/imageViewGreenArrow"
        android:layout_width="@dimen/t120dp"
        android:layout_height="@dimen/t53dp"
        android:layout_marginRight="@dimen/t3dp"
        android:layout_marginBottom="@dimen/t33dp"
        android:src="@drawable/blue_arrow_r"
        android:layout_toLeftOf="@+id/viewAnchorAlbum"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
