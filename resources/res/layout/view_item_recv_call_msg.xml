<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="6.6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ChatMessageContentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <ImageView
            android:id="@+id/ChatMessageAvatar"
            android:layout_toRightOf="@+id/itemCheckBox"
            style="@style/ViewItemRecvAvatar"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textColor="#000000"
            android:id="@+id/ChatMessageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_alignParentTop="true"
            style="@style/ViewItemRecvName"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_below="@+id/ChatMessageNameTextView">
            <RelativeLayout
                android:id="@+id/contentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/contentLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t3dp">
                    <RelativeLayout
                        android:id="@+id/ChatMessageClickLayout"
                        android:background="@drawable/chat_bg_l_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ChatMessageAudioLayout"
                        android:layout_alignTop="@+id/ChatMessageAudioLayout"
                        android:layout_alignRight="@+id/ChatMessageAudioLayout"
                        android:layout_alignBottom="@+id/ChatMessageAudioLayout"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ChatMessageAudioLayout"
                        android:paddingTop="@dimen/t8dp"
                        android:paddingBottom="@dimen/t8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/t11dp"
                            android:layout_marginRight="@dimen/t4dp">
                            <com.cyberlink.you.activity.chatdialog.message.SelfDestructView
                                android:id="@+id/selfDestructImage"
                                android:visibility="gone"
                                android:layout_width="@dimen/t20dp"
                                android:layout_height="@dimen/t20dp"
                                android:src="@drawable/voice_lock"/>
                            <ImageView
                                android:id="@+id/ChatMessageAudioOpView"
                                android:layout_width="@dimen/clm_meeting_indicator_width"
                                android:layout_height="@dimen/clm_meeting_indicator_height"
                                android:src="@drawable/icon_video_call_start"
                                android:scaleType="fitCenter"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/explode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/t8sp"
                android:textColor="#000000"
                android:id="@+id/ChatMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t5dp"
                android:text="xxx"
                android:singleLine="true"
                android:layout_toRightOf="@+id/contentLayout"
                android:layout_alignBottom="@+id/contentLayout"
                android:layout_centerVertical="true"/>
            <ProgressBar
                android:id="@+id/downloadProgressbar"
                android:visibility="gone"
                android:layout_width="@dimen/t25dp"
                android:layout_height="@dimen/t25dp"
                android:layout_toRightOf="@+id/ChatMessageTimeTextView"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/t11sp"
                android:textColor="#ff0000"
                android:gravity="center_horizontal"
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t6dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/contentLayout"
                android:layout_alignLeft="@+id/contentLayout"
                android:layout_alignRight="@+id/contentLayout"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
