<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/back"
            android:contentDescription="[AID]About_Back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:text="@string/organization_title"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="#7f7f7f"
        android:layout_gravity="center_horizontal"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text=""/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/avatar"
        android:layout_width="197dp"
        android:layout_height="197dp"
        android:src="@drawable/pic_default"
        style="@style/AvatarImageView"/>
    <TextView
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#7f7f7f"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="30dp"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/join"
        android:background="@drawable/image_selector_common_button"
        android:visibility="gone"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:text="@string/organization_join"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/cancel"
        android:background="@color/you_color_inviting_pink"
        android:visibility="gone"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:text="@string/cancel"/>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/ok"
        android:background="@drawable/image_selector_common_button"
        android:visibility="gone"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:text="@string/ok"/>
</LinearLayout>
