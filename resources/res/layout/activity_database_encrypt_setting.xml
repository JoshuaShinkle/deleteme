<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/DatabaseEncryptSettingHeader"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/DatabaseEncryptSettingBackBtn"
            android:contentDescription="[AID]Setting_Back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:id="@+id/DatabaseEncryptSettingTopBarTitle"
            android:text="@string/setting_local_database_encryption"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/t20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t10dp"
                android:layout_marginTop="@dimen/t20dp"
                android:layout_marginRight="@dimen/t10dp"
                android:text="@string/setting_local_database_encryption_description"/>
            <RelativeLayout
                android:id="@+id/DatabaseEncryptSetting"
                android:layout_marginTop="@dimen/t20dp"
                style="@style/setting_page_content_item">
                <include layout="@layout/setting_item_with_check_box"/>
            </RelativeLayout>
            <View
                android:background="@color/you_color_setting_item_spliter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t1dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
