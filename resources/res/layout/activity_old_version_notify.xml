<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/OldVersionNotifyHeader"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/OldVersionNotifyBackBtn"
            android:visibility="gone"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:id="@+id/InvitationSmsTopBarTitle"
            android:text="@string/update_U"
            android:layout_centerInParent="true"
            style="@style/TitleBar_RightTitle"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/OldVersionNotifyImageArea"
        android:background="@drawable/ic_launcher"
        android:layout_width="@dimen/t100dp"
        android:layout_height="@dimen/t100dp"
        android:layout_marginTop="@dimen/t30dp"
        android:layout_below="@+id/OldVersionNotifyHeader"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/t18sp"
        android:textColor="@color/you_color_normal_gray_text"
        android:gravity="center_horizontal"
        android:id="@+id/OldVersionNotifyTextNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t20dp"
        android:layout_marginTop="@dimen/t20dp"
        android:layout_marginRight="@dimen/t20dp"
        android:text="@string/update_app_note_text_v2"
        android:layout_below="@+id/OldVersionNotifyImageArea"/>
    <TextView
        android:textSize="@dimen/t18sp"
        android:textColor="@color/you_color_normal_gray_text"
        android:id="@+id/OldVersionNotifyNewItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t20dp"
        android:layout_marginTop="@dimen/t40dp"
        android:layout_marginRight="@dimen/t20dp"
        android:text="@string/update_app_new_item_title"
        android:layout_below="@+id/OldVersionNotifyTextNote"/>
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t20dp"
        android:layout_marginTop="@dimen/t10dp"
        android:layout_marginRight="@dimen/t20dp"
        android:layout_marginBottom="@dimen/t10dp"
        android:layout_above="@+id/OldVersionNotifyUpdateBtn"
        android:layout_below="@+id/OldVersionNotifyNewItemTitle"/>
    <Button
        android:id="@+id/OldVersionNotifyUpdateBtn"
        android:layout_marginBottom="@dimen/t40dp"
        android:text="@string/update_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/AppButtonStyleGeneral"/>
</RelativeLayout>
