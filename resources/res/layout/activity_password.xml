<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/t42dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/passcode_ap_icon"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:scaleType="fitCenter"/>
    <TextView
        android:textSize="32sp"
        android:gravity="center"
        android:id="@+id/PrivacyPasswordInputNote"
        android:paddingLeft="@dimen/t8dp"
        android:paddingTop="@dimen/t12dp"
        android:paddingRight="@dimen/t8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_password_confirm"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/you_color_normal_gray_text"
        android:gravity="center_horizontal"
        android:id="@+id/PrivacyPasswordInputWarning"
        android:paddingLeft="@dimen/t8dp"
        android:paddingTop="@dimen/t3dp"
        android:paddingRight="@dimen/t8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_password_enter_new"
        android:lines="2"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:id="@+id/PrivacyPasswordCircle1"
            style="@style/PassCodeDot"/>
        <View
            android:id="@+id/PrivacyPasswordCircle2"
            style="@style/PassCodeDot"/>
        <View
            android:id="@+id/PrivacyPasswordCircle3"
            style="@style/PassCodeDot"/>
        <View
            android:id="@+id/PrivacyPasswordCircle4"
            style="@style/PassCodeDot"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/you_color_password_keyboard_split_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout style="@style/PassCodeRow">
            <TextView
                android:id="@+id/PasswordKeyboard_1"
                android:text="1"
                android:contentDescription="[AID]PasswordCode_1"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_2"
                android:text="2"
                android:contentDescription="[AID]PasswordCode_2"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_3"
                android:text="3"
                android:contentDescription="[AID]PasswordCode_3"
                style="@style/PassWordKeyBoardTextStyle"/>
        </LinearLayout>
        <LinearLayout style="@style/PassCodeRow">
            <TextView
                android:id="@+id/PasswordKeyboard_4"
                android:text="4"
                android:contentDescription="[AID]PasswordCode_4"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_5"
                android:text="5"
                android:contentDescription="[AID]PasswordCode_5"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_6"
                android:text="6"
                android:contentDescription="[AID]PasswordCode_6"
                style="@style/PassWordKeyBoardTextStyle"/>
        </LinearLayout>
        <LinearLayout style="@style/PassCodeRow">
            <TextView
                android:id="@+id/PasswordKeyboard_7"
                android:text="7"
                android:contentDescription="[AID]PasswordCode_7"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_8"
                android:text="8"
                android:contentDescription="[AID]PasswordCode_8"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_9"
                android:text="9"
                android:contentDescription="[AID]PasswordCode_9"
                style="@style/PassWordKeyBoardTextStyle"/>
        </LinearLayout>
        <LinearLayout style="@style/PassCodeRow">
            <TextView
                android:textSize="17sp"
                android:id="@+id/PasswordKeyboard_cancel"
                android:text="@string/cancel_text"
                android:contentDescription="[AID]PasswordCode_Cancel"
                style="@style/PassWordKeyBoardTextStyle"/>
            <TextView
                android:id="@+id/PasswordKeyboard_0"
                android:text="0"
                android:contentDescription="[AID]PasswordCode_0"
                style="@style/PassWordKeyBoardTextStyle"/>
            <RelativeLayout
                android:id="@+id/PasswordKeyboard_modify"
                android:contentDescription="[AID]PasswordCode_Del"
                style="@style/PassWordKeyBoardTextStyle">
                <ImageView
                    android:id="@+id/PasswordKeyboard_modify_img"
                    android:layout_width="30dp"
                    android:layout_height="19dp"
                    android:src="@drawable/image_selector_press_password_delete"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
