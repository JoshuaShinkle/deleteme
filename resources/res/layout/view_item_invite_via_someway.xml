<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <ImageView
            android:id="@+id/InvitationViaSomeWayImage"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/pic_default"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/AvatarImageView"/>
        <com.cyberlink.widget.Button2
            android:textColor="@color/you_color_normal_blue_text"
            android:id="@+id/InvitationViaSomeWayBtn"
            android:background="@drawable/btn_blue_resent"
            android:layout_marginRight="10dp"
            android:text="@string/invitation_sms_invite_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="[AID]Button_Invite"
            style="@style/FriendsFriendsInvitingButton"/>
        <LinearLayout
            android:gravity="left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toLeftOf="@+id/InvitationViaSomeWayBtn"
            android:layout_toRightOf="@+id/InvitationViaSomeWayImage"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/InvitationViaSomeWayDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/you_color_normal_gray"
                android:id="@+id/InvitationViaSomeWayData"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
