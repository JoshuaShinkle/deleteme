<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingTop="6.6dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ChatMessageContentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <ImageView
            android:id="@+id/ChatMessageAvatar"
            android:layout_toRightOf="@+id/itemCheckBox"
            style="@style/ViewItemRecvAvatar"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textColor="#000000"
            android:id="@+id/ChatMessageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_alignParentTop="true"
            style="@style/ViewItemRecvName"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_below="@+id/ChatMessageNameTextView">
            <RelativeLayout
                android:id="@+id/contentLayout"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/t5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/ChatMessageContentLayout2"
                    android:background="@drawable/chat_bg_l_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/sourceSenderLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/t25dp">
                        <TextView
                            android:textColor="@color/you_color_33_percentage_gray"
                            android:layout_width="@dimen/t10dp"
                            android:layout_height="match_parent"
                            android:text="&gt; "/>
                        <TextView
                            android:textColor="@color/you_color_33_percentage_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/message_from"/>
                        <TextView
                            android:textColor="@color/you_color_33_percentage_gray"
                            android:ellipsize="end"
                            android:id="@+id/sourceSenderTextView"
                            android:layout_width="@dimen/t100dp"
                            android:layout_height="match_parent"
                            android:lines="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sourceSenderLayout">
                        <View
                            android:background="@color/black"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <com.rockerhieu.emojicon.EmojiconTextView
                            android:textSize="@dimen/chat_textfontsize"
                            android:textColor="#000000"
                            android:id="@+id/ChatMessageContentTextView"
                            android:paddingLeft="@dimen/t8dp"
                            android:paddingTop="@dimen/t4dp"
                            android:paddingRight="@dimen/t8dp"
                            android:paddingBottom="@dimen/t4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            emojicon:emojiconSize="@dimen/t32dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/urlImage"
                    android:paddingBottom="@dimen/t6dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t7dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"
                    android:layout_below="@+id/ChatMessageContentLayout2"
                    android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                    android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                <TextView
                    android:textSize="@dimen/chat_textfontsize"
                    android:textColor="@color/you_color_normal"
                    android:ellipsize="end"
                    android:id="@+id/urlTitle"
                    android:paddingLeft="@dimen/t8dp"
                    android:paddingRight="@dimen/t8dp"
                    android:paddingBottom="@dimen/t6dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t7dp"
                    android:maxLines="2"
                    android:layout_below="@+id/urlImage"
                    android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                    android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                <TextView
                    android:textSize="@dimen/chat_comment_textfontsize"
                    android:textColor="#454545"
                    android:ellipsize="end"
                    android:id="@+id/urlDescription"
                    android:paddingLeft="@dimen/t8dp"
                    android:paddingRight="@dimen/t8dp"
                    android:paddingBottom="@dimen/t6dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t7dp"
                    android:maxLines="2"
                    android:layout_below="@+id/urlTitle"
                    android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                    android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/urlMultiPreview"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/t7dp"
                    android:layout_below="@+id/ChatMessageContentLayout2"
                    android:layout_alignLeft="@+id/ChatMessageContentLayout2"
                    android:layout_alignRight="@+id/ChatMessageContentLayout2"/>
            </RelativeLayout>
            <TextView
                android:textSize="8sp"
                android:textColor="#000000"
                android:id="@+id/ChatMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/contentLayout"
                android:layout_alignBottom="@+id/contentLayout"/>
            <TextView
                android:textSize="@dimen/t11sp"
                android:textColor="#ff0000"
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t6dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/contentLayout"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
