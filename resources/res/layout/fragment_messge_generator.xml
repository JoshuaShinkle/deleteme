<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bg_border_album"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/you_color_divider_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/textMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="[AID]MsgGenerator_Msg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/image_selector_type_text_btn"/>
            </LinearLayout>
            <View
                android:background="@color/you_color_normal_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="0"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/stickerMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/image_selector_type_sticker_btn"
                    android:contentDescription="[AID]MsgGenerator_Sticker"/>
            </LinearLayout>
            <View
                android:background="@color/you_color_normal_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="0"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/photoMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/image_selector_type_photo_btn"
                    android:contentDescription="[AID]MsgGenerator_Photo"/>
            </LinearLayout>
            <View
                android:background="@color/you_color_normal_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="0"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/voiceMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="[AID]MsgGenerator_Voice">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/image_selector_type_voice_btn"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/textInputLayout"
        android:background="@drawable/bg_border_album"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <com.rockerhieu.emojicon.EmojiconEditText
            android:textColor="#000000"
            android:gravity="top|left"
            android:id="@+id/textInput"
            android:background="@drawable/bg_border_chat_input_edit_text"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_your_message"
            android:cursorVisible="true"
            android:maxLength="@integer/max_input_length_delay_send_and_broadcast"
            android:textCursorDrawable="@null"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/photoInputLayout"
        android:background="@drawable/bg_border_album"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/cameraInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/drop_btns_camera"/>
                <TextView
                    android:textColor="@color/you_color_normal_gray_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:text="@string/camera"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View
                android:background="@color/you_color_normal_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/photoLibrary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/galleryInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/drop_btns_photo_library"/>
                <TextView
                    android:textColor="@color/you_color_normal_gray_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:text="@string/photo_library"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/stickerFragmentContainer"
        android:background="@drawable/bg_border_album"
        android:padding="1dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/voiceFragmentContainer"
        android:background="@drawable/bg_border_album"
        android:padding="1dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
