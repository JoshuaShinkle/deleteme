<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/RegistrationHeader"
        style="@style/TitleBar">
        <ImageView
            android:id="@+id/RegistrationBackBtn"
            android:contentDescription="[AID]RegEmail_Back"
            style="@style/TitleBar_BackButton"/>
        <TextView
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/RegEmailTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_phone_registration_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/TopBarTextStyle"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/RegEmaillayoutRegistrationArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RegistrationHeader">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t28dp">
            <TextView
                android:textSize="17sp"
                android:textColor="@color/you_color_normal_gray_text"
                android:gravity="center_horizontal"
                android:id="@+id/RegEmailRegistrationDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t24dp"
                android:layout_marginRight="@dimen/t24dp"
                android:text="@string/registration_email_description"/>
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/you_color_normal_gray_text"
                android:gravity="center_horizontal"
                android:id="@+id/RegEmailRegistrationMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t17dp"/>
            <EditText
                android:id="@+id/RegEmailVerificationCodeEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t40dp"
                android:layout_marginLeft="@dimen/t24dp"
                android:layout_marginTop="@dimen/t22dp"
                android:layout_marginRight="@dimen/t24dp"
                android:hint="@string/registration_phone_registration_title"
                android:contentDescription="[AID]RegEmail_Code"
                style="@style/RegEmailVerificationCodeEditTextStyle"/>
            <Button
                android:id="@+id/RegEmailRegistrationNextBtn"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/t24dp"
                android:layout_marginTop="@dimen/t9dp"
                android:layout_marginRight="@dimen/t24dp"
                android:text="@string/profile_update_public_id_dialog_confirm"
                android:contentDescription="[AID]RegEmail_Next"
                style="@style/AppButtonStyleGeneral"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/RegEmailWarningArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t24dp"
                android:layout_marginTop="@dimen/t20dp"
                android:layout_marginRight="@dimen/t24dp">
                <ImageView
                    android:id="@+id/RegEmailWarningIcon"
                    android:background="@drawable/icon_connect_n_verify"
                    android:layout_width="@dimen/t20dp"
                    android:layout_height="@dimen/t20dp"
                    android:layout_marginRight="@dimen/t8dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/you_color_text_waring_red"
                    android:id="@+id/RegEmailRegistrationWarningDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_phone_sms_warning_msg"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t24dp"
                android:layout_marginTop="@dimen/t15dp"
                android:layout_marginRight="@dimen/t24dp">
                <TextView
                    android:textSize="17sp"
                    android:textColor="@color/you_color_normal_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_email_no_receive_the_code"
                    android:contentDescription="[AID]RegEmail_Resend"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t3dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:id="@+id/infoCheckMailLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_label"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/infoCheckMailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/link_with_another_email"
                        android:layout_toRightOf="@+id/infoCheckMailLabel"
                        android:contentDescription="[AID]RegEmail_Notes"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t3dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:id="@+id/infoResendWarnLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_label"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registration_email_resend_warn_ckeck_app"
                        android:layout_toRightOf="@+id/infoResendWarnLabel"
                        android:contentDescription="[AID]RegEmail_Notes"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t3dp">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/you_color_normal_gray_text"
                        android:id="@+id/infoNoReceiveVerifyCodeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_label"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/DidntReceiveVerifyCodeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/t3dp"
                        android:text="@string/resend_email_code_again"
                        android:layout_toRightOf="@+id/infoNoReceiveVerifyCodeLabel"
                        android:contentDescription="[AID]RegEmail_Notes"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"/>
</RelativeLayout>
