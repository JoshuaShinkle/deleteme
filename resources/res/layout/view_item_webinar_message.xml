<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_message_normal"
    android:padding="@dimen/t10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/t45dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/displayNameArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/t13sp"
            android:textColor="@color/bc_color_white"
            android:id="@+id/label"
            android:paddingLeft="@dimen/t5dp"
            android:paddingRight="@dimen/t5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/t5dp"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/t15sp"
            android:textStyle="bold"
            android:textColor="@color/bc_color_black"
            android:id="@+id/displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            emojicon:emojiconSize="@dimen/t15sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t5dp"
        android:layout_below="@+id/displayNameArea">
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/t15sp"
            android:textColor="@color/ycl_live_text_color"
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            emojicon:emojiconSize="@dimen/t15sp"/>
        <TextView
            android:textSize="@dimen/t13sp"
            android:textColor="@color/like_count_color"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/likeCountTextView"
            android:layout_width="@dimen/t30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t3dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/likeImageView"
            android:padding="@dimen/t1dp"
            android:layout_width="@dimen/t25dp"
            android:layout_height="@dimen/t25dp"
            android:src="@drawable/image_selector_like"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/t15dp"
        android:textColor="@color/bc_color_black"
        android:gravity="center"
        android:id="@+id/commentDeleteTextView"
        android:background="#0a000000"
        android:paddingLeft="@dimen/t50dp"
        android:paddingTop="@dimen/t5dp"
        android:paddingRight="@dimen/t50dp"
        android:paddingBottom="@dimen/t5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wbn_comment_delete"
        android:layout_centerInParent="true"/>
</RelativeLayout>
