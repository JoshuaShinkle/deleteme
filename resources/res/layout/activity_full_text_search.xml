<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/searchInGroupHeaderArea"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/searchInGroupHeader"
            style="@style/TitleBar">
            <ImageView
                android:id="@+id/searchInGroupBackBtn"
                android:contentDescription="[AID]Chat_Back"
                style="@style/TitleBar_BackButton"/>
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/searchInGroupBackBtn">
                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/searchInGroupTitle"
                    android:layout_centerVertical="true"
                    emojicon:emojiconSize="@dimen/t20dp"
                    style="@style/TitleBar_RightTitle"/>
            </RelativeLayout>
        </RelativeLayout>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textSize="@dimen/t20dp"
            android:textColor="@color/you_color_normal_gray"
            android:ellipsize="end"
            android:id="@+id/searchInGroupResult"
            android:paddingBottom="@dimen/t5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t20dp"
            android:maxLines="1"
            android:layout_below="@+id/searchInGroupHeader"
            android:layout_centerVertical="true"
            emojicon:emojiconSize="@dimen/t20dp"/>
        <View
            android:background="@color/chat_list_divider_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/searchInGroupResult"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/resultListView"
        android:padding="@dimen/t5dp"
        android:layout_below="@+id/searchInGroupHeaderArea"
        style="@style/grayDividerListView"/>
</RelativeLayout>
