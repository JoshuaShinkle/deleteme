<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_chat_tab_item_background"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/chat_list_divider_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="@dimen/t18dp"
        android:textColor="@drawable/color_selector_tab_text"
        android:gravity="center"
        android:id="@+id/fragment_chat_tab_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <View
        android:background="@color/chat_list_divider_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
    <View
        android:gravity="center"
        android:id="@+id/fragment_chat_tab_item_underline"
        android:background="@drawable/color_selector_tab_bottom_highlight"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
