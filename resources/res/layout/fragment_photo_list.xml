<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/photoRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/menuOperation"
        android:layout_alignParentTop="true">
        <GridView
            android:id="@+id/MyPhotoListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/PhotoListEmptyView"
        android:background="@color/you_color_white"
        android:visibility="visible"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_item_left_bottom_to_right_top_indicate_arrow"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/you_color_empty_view_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/PhotoListEmptyTextView"
            android:clickable="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <Button
        android:id="@+id/menuOperation"
        style="@style/AppButtonStyleForSelectionDelete"/>
    <ProgressBar
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"/>
</RelativeLayout>
