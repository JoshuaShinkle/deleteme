<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:background="@color/bc_color_black"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <RelativeLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t202dp"
        android:layout_centerVertical="true">
        <com.google.android.exoplayer2.p038ui.AspectRatioFrameLayout
            android:id="@+id/video_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <TextureView
                android:layout_gravity="center"
                android:id="@+id/texture_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.exoplayer2.p038ui.AspectRatioFrameLayout>
        <TextView
            android:textColor="@color/bc_color_white"
            android:gravity="center"
            android:id="@+id/on_video_message"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ycl_scheduled_live_not_yet_start"/>
        <ProgressBar
            android:id="@+id/loading_cursor"
            android:visibility="gone"
            android:layout_width="@dimen/t38dp"
            android:layout_height="@dimen/t38dp"
            android:indeterminateDrawable="@drawable/layer_list_waiting_cursor"
            android:indeterminateBehavior="repeat"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/t15dp"
        android:textColor="@color/live_water_mark_color_text"
        android:id="@+id/water_mark_text_view"
        android:background="@color/live_water_mark_color_background"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/ui_panel"
        android:background="#80000000"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/play_pause_btn"
            android:padding="@dimen/t11dp"
            android:layout_width="@dimen/t48dp"
            android:layout_height="@dimen/t48dp"
            android:src="@drawable/webinar_btn_pause"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:background="#191919"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t55dp"
            android:layout_alignParentBottom="true">
            <SeekBar
                android:id="@+id/seekBar"
                android:paddingLeft="@dimen/t5dp"
                android:paddingRight="@dimen/t5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t18dp"
                android:layout_marginRight="@dimen/t55dp"
                android:layout_marginBottom="@dimen/t8dp"
                android:maxHeight="@dimen/t10dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/player_seekbar"
                android:minHeight="@dimen/t10dp"
                android:thumb="@drawable/player_seekbar_thumb"
                android:thumbOffset="@dimen/t4dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textColor="@color/bc_color_white"
                android:id="@+id/current_time"
                android:paddingLeft="@dimen/t5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t5dp"
                android:text="00:00:00"
                android:layout_alignLeft="@+id/seekBar"/>
            <TextView
                android:textColor="@color/bc_color_white"
                android:id="@+id/total_time"
                android:paddingRight="@dimen/t5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t5dp"
                android:text="00:00:00"
                android:layout_alignRight="@+id/seekBar"/>
            <ImageView
                android:id="@+id/btnReplaySetting"
                android:padding="@dimen/t6dp"
                android:visibility="gone"
                android:layout_width="@dimen/t40dp"
                android:layout_height="@dimen/t48dp"
                android:layout_marginRight="@dimen/t40dp"
                android:src="@drawable/image_selector_setting_btn"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/fullscreen_btn"
                android:padding="@dimen/t6dp"
                android:layout_width="@dimen/t40dp"
                android:layout_height="@dimen/t48dp"
                android:src="@drawable/image_selector_fullscreen_btn"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/restore_btn"
                android:padding="@dimen/t6dp"
                android:visibility="invisible"
                android:layout_width="@dimen/t40dp"
                android:layout_height="@dimen/t48dp"
                android:src="@drawable/image_selector_restore_btn"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <include
        android:id="@+id/top_bar"
        layout="@layout/layout_unit_app_top_bar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        layout="@layout/layout_unit_live_status_view"/>
</RelativeLayout>
