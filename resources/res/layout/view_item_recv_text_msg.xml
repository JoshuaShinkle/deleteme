<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingTop="6.6dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ChatMessageContentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <ImageView
            android:id="@+id/ChatMessageAvatar"
            android:layout_toRightOf="@+id/itemCheckBox"
            style="@style/ViewItemRecvAvatar"/>
        <ImageView
            android:id="@+id/ChatMessageBroadcasterTag"
            android:visibility="gone"
            android:layout_width="@dimen/t20dp"
            android:layout_height="@dimen/t20dp"
            android:layout_marginLeft="@dimen/t25dp"
            android:src="@drawable/icon_broadcast_tag"
            android:layout_alignLeft="@+id/ChatMessageAvatar"/>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:textColor="@color/black"
            android:id="@+id/ChatMessageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_alignParentTop="true"
            style="@style/ViewItemRecvName"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ChatMessageAvatar"
            android:layout_below="@+id/ChatMessageNameTextView">
            <RelativeLayout
                android:id="@+id/contentLayout"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/t5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/ChatMessageContentLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/TextContentArea"
                        android:background="@drawable/chat_bg_l_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ChatMessageContentTextView"
                        android:layout_alignTop="@+id/ChatMessageContentTextView"
                        android:layout_alignRight="@+id/ChatMessageContentTextView"
                        android:layout_alignBottom="@+id/ChatMessageContentTextView"/>
                    <com.rockerhieu.emojicon.EmojiconTextView
                        android:textSize="@dimen/chat_textfontsize"
                        android:textColor="#000000"
                        android:id="@+id/ChatMessageContentTextView"
                        android:paddingLeft="@dimen/t12dp"
                        android:paddingTop="@dimen/t4dp"
                        android:paddingRight="@dimen/t8dp"
                        android:paddingBottom="@dimen/t4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        emojicon:emojiconSize="@dimen/t32dp"/>
                    <ImageView
                        android:id="@+id/urlImage"
                        android:paddingBottom="@dimen/t6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/t7dp"
                        android:scaleType="centerCrop"
                        android:cropToPadding="true"
                        android:layout_below="@+id/ChatMessageContentTextView"
                        android:layout_alignLeft="@+id/ChatMessageContentTextView"
                        android:layout_alignRight="@+id/ChatMessageContentTextView"/>
                    <TextView
                        android:textSize="@dimen/chat_textfontsize"
                        android:textColor="@color/you_color_normal"
                        android:ellipsize="end"
                        android:id="@+id/urlTitle"
                        android:paddingLeft="@dimen/t5dp"
                        android:paddingRight="@dimen/t8dp"
                        android:paddingBottom="@dimen/t6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/t7dp"
                        android:maxLines="2"
                        android:layout_below="@+id/urlImage"
                        android:layout_alignLeft="@+id/ChatMessageContentTextView"
                        android:layout_alignRight="@+id/ChatMessageContentTextView"/>
                    <TextView
                        android:textSize="@dimen/chat_comment_textfontsize"
                        android:textColor="#454545"
                        android:ellipsize="end"
                        android:id="@+id/urlDescription"
                        android:paddingLeft="@dimen/t5dp"
                        android:paddingRight="@dimen/t8dp"
                        android:paddingBottom="@dimen/t6dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/t7dp"
                        android:maxLines="2"
                        android:layout_below="@+id/urlTitle"
                        android:layout_alignLeft="@+id/ChatMessageContentTextView"
                        android:layout_alignRight="@+id/ChatMessageContentTextView"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/urlMultiPreview"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/t7dp"
                        android:layout_below="@+id/ChatMessageContentTextView"
                        android:layout_alignLeft="@+id/ChatMessageContentTextView"
                        android:layout_alignRight="@+id/ChatMessageContentTextView"/>
                </RelativeLayout>
                <com.cyberlink.you.activity.chatdialog.message.SelfDestructView
                    android:id="@+id/selfDestructImage"
                    android:layout_width="@dimen/t50dp"
                    android:layout_height="@dimen/t50dp"
                    android:src="@drawable/self_destruct_locker"/>
                <ImageView
                    android:id="@+id/explode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>
            <TextView
                android:textSize="8sp"
                android:textColor="#000000"
                android:id="@+id/ChatMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/contentLayout"
                android:layout_alignBottom="@+id/contentLayout"/>
            <TextView
                android:textSize="@dimen/t11sp"
                android:textColor="#ff0000"
                android:id="@+id/ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t6dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/contentLayout"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
