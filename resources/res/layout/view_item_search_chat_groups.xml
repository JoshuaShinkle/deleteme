<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ChatGroupItemLayout">
    <RelativeLayout
        android:id="@+id/FriendsGroupsCircleImageViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/FriendsGroupsCircleImageView_DisplayImage"
            android:src="@drawable/group_default"
            style="@style/ChatGroupItemAvatar"/>
        <ImageView
            android:id="@+id/searchChatGroupLockView"
            android:visibility="gone"
            android:layout_width="@dimen/t17dp"
            android:layout_height="@dimen/t17dp"
            android:layout_marginBottom="@dimen/t2dp"
            android:src="@drawable/ic_lock_mobile_messenger"
            android:layout_alignRight="@+id/FriendsGroupsCircleImageView_DisplayImage"
            android:layout_alignBottom="@+id/FriendsGroupsCircleImageView_DisplayImage"/>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/chatGroupItemCheckBox"
        style="@style/ChatGroupItemCheckBox"/>
    <LinearLayout
        android:id="@+id/chatGroupRightLayout"
        style="@style/ChatGroupItemRightLayout">
        <TextView
            android:id="@+id/chatGroupTimeView"
            style="@style/ChatGroupItemTime"/>
        <RelativeLayout
            android:id="@+id/UnreadLayout"
            style="@style/ChatGroupItemUnreadLayout">
            <TextView
                android:id="@+id/chatGroupUnreadCountView"
                style="@style/ChatGroupItemUnreadCount"/>
            <TextView
                android:id="@+id/bulletin_notification_disable_unread"
                style="@style/ChatGroupItemBulletinQuiet"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_toLeftOf="@+id/chatGroupRightLayout"
        android:layout_toRightOf="@+id/FriendsGroupsCircleImageViewLayout"
        style="@style/ChatGroupItemMiddleLayout">
        <LinearLayout
            android:id="@+id/ChatDialogTopBarTitleArea"
            style="@style/ChatGroupItemTopLayout">
            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/FriendsGroupsTextView_GroupName"
                style="@style/ChatGroupItemName"/>
            <TextView
                android:id="@+id/FriendsGroupsTextView_MemberCount"
                style="@style/ChatGroupItemCount"/>
        </LinearLayout>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/chatGroupLastMessageUpperView"
            android:layout_below="@+id/ChatDialogTopBarTitleArea"
            style="@style/ChatGroupItemLastMessage"/>
    </RelativeLayout>
</RelativeLayout>
