<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t218dp">
        <com.cyberlink.you.widgetpool.clhorizontalgridview.HorizontalGridView
            android:id="@+id/emojiListGridView"
            android:background="#e6e6e6"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t45dp"
            android:overScrollMode="never"
            app:horizontalSpacing="20dp"
            app:listSelector="@android:color/transparent"
            app:numRows="1"/>
        <RelativeLayout
            android:id="@+id/viewPagerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.cyberlink.you.sticker.StickerViewPager
                android:layout_gravity="center"
                android:id="@+id/viewpager"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/pageIndexContainer"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/downloadStickerProgressLayout"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ProgressBar
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/downloadStickerProgress"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressDrawable="@drawable/send_photo_progress"
                        style="?android:attr/progressBarStyleHorizontal"/>
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/downloading"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/redownloadLayout"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnDownload"
                    android:text="@string/download"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="[AID]Sticker_Download"
                    style="@style/AppButtonStyleGeneral"/>
            </RelativeLayout>
            <View
                android:id="@+id/stickerInnerMask"
                android:background="#80ffffff"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/pageIndexContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t7dp"
                android:layout_marginBottom="@dimen/t5dp"
                android:divider="@drawable/padding_album_column"
                android:layout_alignParentBottom="true"
                android:showDividers="middle"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/you_color_normal_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t42dp">
        <ImageButton
            android:id="@+id/stickerShopImageButton"
            android:background="#f1f0f0"
            android:visibility="gone"
            android:layout_width="@dimen/t42dp"
            android:layout_height="@dimen/t42dp"
            android:src="@drawable/sticker_thumbnail_plus"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/seperator"
            android:background="#b2b2b2"
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <com.cyberlink.you.widgetpool.clhorizontalgridview.HorizontalGridView
            android:id="@+id/stickerListGridView"
            android:background="#f1f0f0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:overScrollMode="never"
            app:listSelector="@android:color/transparent"
            app:numRows="1"/>
    </RelativeLayout>
</LinearLayout>
