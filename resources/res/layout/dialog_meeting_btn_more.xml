<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/raise_or_lower_hand_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_raise_or_lower_hand"
            android:text="@string/clm_meeting_allow_recording"
            style="@style/DialogSelectionItemText"/>
        <View
            android:background="@color/you_color_normal_gray"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/item_share_desktop"
            android:text="@string/clm_meeting_desktop_sharing_start_button"
            style="@style/DialogSelectionItemText"/>
        <View
            android:background="@color/you_color_normal_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
