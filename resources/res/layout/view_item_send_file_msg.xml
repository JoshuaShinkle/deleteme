<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ViewItemSendLayout">
        <ImageView
            android:id="@+id/itemCheckBox"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/chat_item_check_box_margin_left"
            android:layout_marginRight="@dimen/chat_item_check_box_margin_right"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/ViewItemMessageCheckBox"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/ChatMessageSendFail"
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_send_failed"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/ChatMessageReadCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        style="@style/ViewItemSendRead"/>
                    <ProgressBar
                        android:id="@+id/sendingProgressbar"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/ChatMessageTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        style="@style/ViewItemSendTime"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/send_photo_progress"
                    android:layout_alignParentBottom="true"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ChatMessageContentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/ChatMessageContentLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/fileContentView"
                        android:background="@drawable/chat_bg_r_s2"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <ImageView
                            android:id="@+id/fileImage"
                            android:layout_width="@dimen/t50dp"
                            android:layout_height="@dimen/t50dp"
                            android:layout_centerVertical="true"/>
                        <RelativeLayout
                            android:id="@+id/TextContentView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/fileImage">
                            <TextView
                                android:textSize="@dimen/chat_textfontsize"
                                android:textColor="#000000"
                                android:ellipsize="end"
                                android:id="@+id/ChatMessageContentTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                style="@style/ViewItemRecvMsg"/>
                            <TextView
                                android:textSize="@dimen/chat_textfontsize"
                                android:textColor="#000000"
                                android:id="@+id/FileInfoTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ChatMessageContentTextView"
                                style="@style/ViewItemRecvMsg"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/arrowImage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_user_contact_arrow_tmp"
                            android:layout_toRightOf="@+id/TextContentView"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/scheduleSendMask"
                        android:background="@color/you_color_50_percentage_white"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/fileContentView"
                        android:layout_alignTop="@+id/fileContentView"
                        android:layout_alignRight="@+id/fileContentView"
                        android:layout_alignBottom="@+id/fileContentView"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/explode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="11sp"
            android:textColor="#ff0000"
            android:id="@+id/ttl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="11dp"
            android:includeFontPadding="false"
            android:layout_below="@+id/layout1"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
