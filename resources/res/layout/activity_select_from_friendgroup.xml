<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        style="@style/TitleBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/imageViewBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="[AID]SelectFriend_Back"
                    style="@style/TitleBar_BackButton"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/t20dp"
                android:textColor="@color/you_color_normal_gray_text"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="@string/group_add_member_title"
                android:layout_toLeftOf="@+id/buttonDone"
                android:layout_toRightOf="@+id/imageViewBackBtn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/TopBarTextStyle"/>
            <Button
                android:id="@+id/buttonDone"
                android:contentDescription="[AID]GroupCreate_Done"
                style="@style/SelectUserButtonStyle"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/linearLayoutLayoutSearch"
        android:background="#e1e1e1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <include layout="@layout/search_edit_token"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/groupQrCodeInviteLayout"
        android:background="#e1e1e1"
        android:padding="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/t17dp"
            android:textColor="@drawable/image_selector_common_blue_text"
            android:id="@+id/groupQrCodeInviteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_invite_via_link"/>
    </LinearLayout>
    <com.cyberlink.you.widgetpool.common.CLFragmentTabHost
        android:id="@+id/tabhost"
        android:background="@color/you_color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/groupQrCodeInviteLayout"
        android:layout_below="@+id/linearLayoutLayoutSearch">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TabWidget
                android:orientation="horizontal"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>
            <FrameLayout
                android:id="@+id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"/>
        </LinearLayout>
    </com.cyberlink.you.widgetpool.common.CLFragmentTabHost>
    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabhost"/>
    <RelativeLayout
        android:id="@+id/tabsNewIcon"
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/tabhost"
        android:layout_alignParentRight="true">
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/ic_new_icon_layout"/>
    </RelativeLayout>
</RelativeLayout>
