<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/CountryItemRelativeLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/CountryStatusImg"
            android:visibility="invisible"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_profile_check_s"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/you_color_normal_blue_text"
            android:id="@+id/CountryCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/you_color_normal"
            android:id="@+id/CountryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/CountryCodeTextView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
