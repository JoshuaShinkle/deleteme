<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ChatGroupItemLayout">
    <RelativeLayout
        android:id="@+id/userAvatarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/userAvatarView"
            style="@style/ChatGroupItemAvatar"/>
        <ImageView
            android:id="@+id/userLockView"
            android:visibility="gone"
            android:layout_width="@dimen/t17dp"
            android:layout_height="@dimen/t17dp"
            android:layout_marginBottom="@dimen/t2dp"
            android:src="@drawable/ic_lock_mobile_messenger"
            android:layout_alignRight="@+id/userAvatarView"
            android:layout_alignBottom="@+id/userAvatarView"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/chatGroupRightLayout"
        style="@style/ChatGroupItemRightLayout">
        <TextView
            android:id="@+id/messageDateView"
            style="@style/ChatGroupItemTime"/>
        <TextView
            android:id="@+id/messageTimeView"
            android:layout_marginTop="2dp"
            style="@style/ChatGroupItemTime"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_toLeftOf="@+id/chatGroupRightLayout"
        android:layout_toRightOf="@+id/userAvatarLayout"
        style="@style/ChatGroupItemMiddleLayout">
        <LinearLayout
            android:id="@+id/ChatDialogTopBarTitleArea"
            style="@style/ChatGroupItemTopLayout">
            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/userNameView"
                style="@style/ChatGroupItemName"/>
            <TextView
                android:id="@+id/FriendsGroupsTextView_MemberCount"
                style="@style/ChatGroupItemCount"/>
        </LinearLayout>
        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/messageView"
            android:layout_below="@+id/ChatDialogTopBarTitleArea"
            style="@style/ChatGroupItemLastMessage"/>
    </RelativeLayout>
</RelativeLayout>
