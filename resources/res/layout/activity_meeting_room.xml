<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/clm_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/meetingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.cyberlink.widget.ViewPager
            android:id="@+id/meetingViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/ChatDialogFragmentArea"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <FrameLayout
                android:id="@+id/menuFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <include
        android:layout_gravity="center"
        android:id="@+id/remoteViewPanel0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/view_item_meeting_remote_render_panel"/>
    <include layout="@layout/view_item_meeting_floating_menu"/>
    <include layout="@layout/view_item_meeting_invite"/>
    <TextView
        android:textSize="@dimen/t20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/txtPeerBBOSD"
        android:background="@drawable/bg_radius_alpha_gray"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t20dp"
        android:layout_marginRight="@dimen/t20dp"
        android:layout_marginBottom="@dimen/t80dp"
        android:alpha="0"/>
    <TextView
        android:textSize="@dimen/t20dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/txtBBOSD"
        android:background="@drawable/bg_radius_alpha_gray"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/t80dp"
        android:text="@string/clm_poor_connection"
        android:alpha="0"/>
    <View
        android:id="@+id/meetingScreenOff"
        android:background="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/extraPage"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/extraPageFakeStatusBar"
                android:background="@color/status_bar_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <RelativeLayout
                android:id="@+id/header"
                style="@style/TitleBar">
                <ImageView
                    android:id="@+id/back"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="[AID]About_Back"
                    style="@style/TitleBar_BackButton"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_marginLeft="@dimen/t43dp"
                    android:layout_marginRight="@dimen/t43dp"
                    android:layout_centerInParent="true"
                    style="@style/TitleBar_RightTitle"/>
            </RelativeLayout>
            <WebView
                android:id="@+id/rollCallPage"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breakoutRoomPage"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/raise_hand_notify"
        android:background="@drawable/bg_raise_hand_notify"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t70dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/raise_hand_notify_icon"
            android:layout_width="@dimen/t50dp"
            android:layout_height="@dimen/t50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/meeting_participants_head_raise_hand"
            android:layout_marginStart="@dimen/t10dp"/>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/raise_hand_notify_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/t200dp"
            android:text="@string/clm_meeting_raise_hand_notify"
            android:maxLines="1"
            android:layout_marginStart="@dimen/t10dp"
            android:layout_marginEnd="@dimen/t10dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/raise_hand_notify_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_close"
            android:layout_marginEnd="@dimen/t10dp"/>
    </LinearLayout>
</FrameLayout>
