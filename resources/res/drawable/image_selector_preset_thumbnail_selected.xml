<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/you_color_normal_blue"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/you_color_normal_blue_pressed"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
